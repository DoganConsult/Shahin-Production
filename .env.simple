# Simple Environment Variables for Docker Setup
# Copy this to .env and customize as needed

# Database Configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=GrcMvcDb

# Application Configuration
APP_PORT=8888
APP_HTTPS_PORT=8443
ASPNETCORE_ENVIRONMENT=Development

# JWT Configuration
JWT_SECRET=ThisIsASecureRandomStringAtLeast32CharactersLongForJWT
JWT_ISSUER=https://portal.shahin-ai.com
JWT_AUDIENCE=https://portal.shahin-ai.com

# Connection Strings (for docker-compose.yml)
CONNECTION_STRING=Host=db;Port=5432;Database=GrcMvcDb;Username=postgres;Password=postgres;Include Error Detail=true
CONNECTION_STRING_GrcAuthDb=Host=db;Port=5432;Database=GrcAuthDb;Username=postgres;Password=postgres;Include Error Detail=true

# Allowed Hosts
ALLOWED_HOSTS=localhost;portal.shahin-ai.com;157.180.105.48

# Redis Configuration
REDIS_PORT=6379
REDIS_HOST=redis

