# ============================================
# GRC MVC Application Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials to version control

# ============================================
# DATABASE CONNECTIONS (REQUIRED)
# ============================================
# PostgreSQL connection strings
ConnectionStrings__DefaultConnection="Host=localhost;Database=shahin_grc;Username=grc_user;Password=YOUR_SECURE_PASSWORD;Port=5432;SSL Mode=Disable"
ConnectionStrings__GrcAuthDb="Host=localhost;Database=shahin_grc;Username=grc_user;Password=YOUR_SECURE_PASSWORD;Port=5432;SSL Mode=Disable"
ConnectionStrings__HangfireConnection="Host=localhost;Database=shahin_grc;Username=grc_user;Password=YOUR_SECURE_PASSWORD;Port=5432;SSL Mode=Disable"
ConnectionStrings__Redis="localhost:6379"

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET="YOUR_64+_CHARACTER_SECRET_HERE_MUST_BE_AT_LEAST_32_CHARACTERS"

# ============================================
# AZURE / MICROSOFT GRAPH (For Email Operations)
# ============================================
AZURE_TENANT_ID="your-azure-tenant-id"
MSGRAPH_CLIENT_ID="your-graph-client-id"
MSGRAPH_CLIENT_SECRET="your-graph-client-secret"
MSGRAPH_APP_ID_URI="api://your-graph-client-id"

# ============================================
# COPILOT AGENT (Microsoft Copilot Studio)
# ============================================
COPILOT_CLIENT_ID="your-copilot-client-id"
COPILOT_CLIENT_SECRET="your-copilot-client-secret"
COPILOT_APP_ID_URI="api://your-copilot-client-id"

# ============================================
# SMTP / EMAIL (For sending emails)
# ============================================
SMTP_FROM_EMAIL="noreply@your-domain.com"
SMTP_USERNAME="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"
SMTP_CLIENT_ID="your-smtp-oauth-client-id"
SMTP_CLIENT_SECRET="your-smtp-oauth-client-secret"

# ============================================
# CLAUDE AI AGENTS (Anthropic)
# ============================================
CLAUDE_API_KEY="sk-ant-your-anthropic-api-key"

# ============================================
# KAFKA (Event-Driven Architecture)
# ============================================
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"

# ============================================
# CAMUNDA BPM (Workflow Orchestration)
# ============================================
CAMUNDA_BASE_URL="http://localhost:8085/camunda"
CAMUNDA_USERNAME="admin"
CAMUNDA_PASSWORD="your-camunda-password"

# ============================================
# HOST SECURITY (REQUIRED for Production)
# ============================================
ALLOWED_HOSTS="localhost;your-domain.com;www.your-domain.com"

# ============================================
# DOCKER DEVELOPMENT (Local Development Only)
# ============================================
POSTGRES_USER="shahin_admin"
POSTGRES_PASSWORD="YOUR_SECURE_PASSWORD"
POSTGRES_DB="shahin_grc"

# ============================================
# APPLICATION SETTINGS (Optional - has defaults)
# ============================================
ApplicationSettings__SupportEmail="support@your-domain.com"
ApplicationSettings__MaxFileUploadSize="10485760"
ApplicationSettings__EnableAuditLog="true"