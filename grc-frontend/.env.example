# ===========================================
# Shahin GRC Frontend - Environment Template
# ===========================================
# Copy this file to .env.local for development
# Copy this file to .env.production for production

# API Configuration (ABP Backend)
NEXT_PUBLIC_API_URL=http://localhost:3006

# Frontend URL (for redirects back from backend)
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3003

# Next Auth Configuration
NEXTAUTH_URL=http://localhost:3003
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# OpenID Connect Configuration (optional)
NEXT_PUBLIC_OIDC_AUTHORITY=http://localhost:3006
NEXT_PUBLIC_OIDC_CLIENT_ID=grc-web
NEXT_PUBLIC_OIDC_REDIRECT_URI=http://localhost:3003/api/auth/callback
NEXT_PUBLIC_OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:3003

# App Info
NEXT_PUBLIC_APP_NAME=شاهين
NEXT_PUBLIC_APP_NAME_EN=Shahin GRC
NEXT_PUBLIC_APP_VERSION=1.0.0
