# ════════════════════════════════════════════════════════════
# Shahin AI GRC Platform - Environment Variables Template
# ════════════════════════════════════════════════════════════
# 
# INSTRUCTIONS:
# 1. Copy this file to .env (DO NOT commit .env to version control)
# 2. Replace all placeholder values with your actual credentials
# 3. Remove this comment block in your actual .env file
#
# ════════════════════════════════════════════════════════════

# ════════════════════════════════════════════════════════════
# Database (PostgreSQL) - REQUIRED
# ════════════════════════════════════════════════════════════
ConnectionStrings__DefaultConnection="Host=localhost;Port=5432;Database=GrcMvcDb;Username=postgres;Password=CHANGE_ME;Pooling=true;SSL Mode=Prefer;Trust Server Certificate=true;"
ConnectionStrings__GrcAuthDb="Host=localhost;Port=5432;Database=GrcAuthDb;Username=postgres;Password=CHANGE_ME;Pooling=true;SSL Mode=Prefer;Trust Server Certificate=true;"
ConnectionStrings__HangfireConnection="Host=localhost;Port=5432;Database=GrcMvcDb;Username=postgres;Password=CHANGE_ME;Pooling=true;SSL Mode=Prefer;Trust Server Certificate=true;"

# ════════════════════════════════════════════════════════════
# Redis (Optional but Recommended)
# ════════════════════════════════════════════════════════════
ConnectionStrings__Redis="localhost:6379"

# ════════════════════════════════════════════════════════════
# Claude AI - REQUIRED for AI features
# ════════════════════════════════════════════════════════════
# Get your API key from: https://console.anthropic.com/
ClaudeAgents__ApiKey="sk-ant-api03-xxxxx"
ClaudeAgents__Enabled=true

# ════════════════════════════════════════════════════════════
# Email (SMTP) - REQUIRED
# ════════════════════════════════════════════════════════════
SMTP_PASSWORD="your_smtp_password"
SmtpSettings__ClientSecret="your-azure-client-secret"

# ════════════════════════════════════════════════════════════
# Microsoft Graph - REQUIRED for email operations
# ════════════════════════════════════════════════════════════
EmailOperations__MicrosoftGraph__ClientSecret="your-graph-client-secret"

# ════════════════════════════════════════════════════════════
# RabbitMQ - Optional (falls back to in-memory if not set)
# ════════════════════════════════════════════════════════════
RabbitMq__Enabled=false
RabbitMq__Host=localhost
RabbitMq__Port=5672
RabbitMq__Username=guest
RabbitMq__Password=guest

# ════════════════════════════════════════════════════════════
# Stripe - Required for payments
# ════════════════════════════════════════════════════════════
# Get your keys from: https://dashboard.stripe.com/
Stripe__SecretKey="sk_test_xxxxx"
Stripe__PublishableKey="pk_test_xxxxx"
Stripe__WebhookSecret="whsec_xxxxx"
Stripe__Enabled=false

# ════════════════════════════════════════════════════════════
# OAuth2 - Optional (external login)
# ════════════════════════════════════════════════════════════
# Google OAuth2
OAuth2__Google__ClientId=""
OAuth2__Google__ClientSecret=""
OAuth2__Google__Enabled=false

# Microsoft OAuth2 (Azure AD)
OAuth2__Microsoft__ClientId=""
OAuth2__Microsoft__ClientSecret=""
OAuth2__Microsoft__Enabled=false

# GitHub OAuth2
OAuth2__GitHub__ClientId=""
OAuth2__GitHub__ClientSecret=""
OAuth2__GitHub__Enabled=false

# ════════════════════════════════════════════════════════════
# Cloud Storage - Optional
# ════════════════════════════════════════════════════════════
Storage__Provider="local"  # Options: "local", "azure", "aws", "googlecloud"

# Azure Blob Storage
Storage__Azure__ConnectionString=""
Storage__Azure__ContainerName="grc-files"

# AWS S3
Storage__AWS__AccessKeyId=""
Storage__AWS__SecretAccessKey=""
Storage__AWS__Region="us-east-1"
Storage__AWS__BucketName="grc-files"

# Google Cloud Storage
Storage__GoogleCloud__CredentialsPath=""
Storage__GoogleCloud__BucketName="grc-files"

# ════════════════════════════════════════════════════════════
# Twilio (SMS 2FA) - Optional
# ════════════════════════════════════════════════════════════
Twilio__AccountSid=""
Twilio__AuthToken=""
Twilio__FromPhoneNumber=""

# ════════════════════════════════════════════════════════════
# SAML 2.0 - Optional (Enterprise SSO)
# ════════════════════════════════════════════════════════════
Saml__Enabled=false
Saml__IdpSsoUrl="https://idp.example.com/sso"
Saml__IdpSloUrl="https://idp.example.com/slo"
Saml__SpCertificatePath=""
Saml__SpCertificatePassword=""
Saml__IdpCertificatePath=""

# ════════════════════════════════════════════════════════════
# LDAP / Active Directory - Optional
# ════════════════════════════════════════════════════════════
Ldap__Enabled=false
Ldap__Server="ldap.example.com"
Ldap__Port=389
Ldap__UseSsl=false
Ldap__BaseDn="DC=example,DC=com"
Ldap__Domain="example.com"
Ldap__ServiceAccountDn=""
Ldap__ServiceAccountPassword=""

# ════════════════════════════════════════════════════════════
# Application Insights - Optional
# ════════════════════════════════════════════════════════════
ApplicationInsights__ConnectionString=""

# ════════════════════════════════════════════════════════════
# JWT Settings - Optional (has defaults)
# ════════════════════════════════════════════════════════════
JwtSettings__Secret="CHANGE_ME_MIN_32_CHARS_FOR_PRODUCTION"
JwtSettings__Issuer="https://portal.shahin-ai.com"
JwtSettings__Audience="https://portal.shahin-ai.com"

# ════════════════════════════════════════════════════════════
# Application URLs - Optional (has defaults)
# ════════════════════════════════════════════════════════════
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://0.0.0.0:5010
