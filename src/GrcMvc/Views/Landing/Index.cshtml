@model GrcMvc.Controllers.LandingPageViewModel
@{
    ViewData["Title"] = "منصة شاهين - نظام الحوكمة والمخاطر والامتثال";
    ViewData["MetaDescription"] = "منصة شاهين - نظام متكامل لإدارة الحوكمة والمخاطر والامتثال للمملكة العربية السعودية. متوافق مع رؤية 2030 ويدعم 130+ جهة تنظيمية.";
    Layout = "_LandingLayout";
}

<!-- Hero Section -->
<section class="hero-section" aria-labelledby="hero-title">
    <div class="container">
        <div class="hero-content">
            <div class="hero-badge" role="status">
                <span class="hero-badge-dot" aria-hidden="true"></span>
                <span>متوافق مع رؤية 2030</span>
            </div>

            <h1 id="hero-title" class="hero-title">
                الحوكمة والامتثال
                <br>
                <span class="hero-title-gradient">أصبحت أسهل</span>
            </h1>

            <p class="hero-subtitle">
                منصة متكاملة لإدارة الحوكمة والمخاطر والامتثال.
                مصممة للجهات الحكومية والمنشآت في المملكة العربية السعودية.
            </p>

            <div class="hero-actions">
                <a href="/Onboarding" class="btn btn-gradient btn-lg">
                    ابدأ تجربة مجانية
                    <i class="bi bi-arrow-left-circle-fill" aria-hidden="true"></i>
                </a>
                <a href="/Landing/Contact" class="btn btn-outline btn-lg">طلب عرض توضيحي</a>
            </div>

            <div class="hero-stats" role="list" aria-label="إحصائيات المنصة">
                <div class="stat" role="listitem">
                    <div class="stat-value">@Model.Stats.Regulators+</div>
                    <div class="stat-label">جهة تنظيمية</div>
                </div>
                <div class="stat" role="listitem">
                    <div class="stat-value">@Model.Stats.Frameworks+</div>
                    <div class="stat-label">إطار تنظيمي</div>
                </div>
                <div class="stat" role="listitem">
                    <div class="stat-value">@(Model.Stats.Controls / 100)+</div>
                    <div class="stat-label">ضابط رقابي</div>
                </div>
                <div class="stat" role="listitem">
                    <div class="stat-value">@Model.Stats.Workflows</div>
                    <div class="stat-label">سير عمل جاهز</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Trusted By Section -->
<section class="logos-section" aria-labelledby="logos-title">
    <div class="container">
        <h2 id="logos-title" class="logos-title">موثوق من قبل المنشآت الرائدة</h2>
        <div class="logos-grid" role="list" aria-label="العملاء">
            <span class="logo-item" role="listitem">أرامكو</span>
            <span class="logo-item" role="listitem">STC</span>
            <span class="logo-item" role="listitem">البنك الأهلي</span>
            <span class="logo-item" role="listitem">سابك</span>
            <span class="logo-item" role="listitem">الراجحي</span>
            <span class="logo-item" role="listitem">نيوم</span>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="section" aria-labelledby="features-title">
    <div class="container">
        <div class="section-header">
            <span class="section-eyebrow">المميزات</span>
            <h2 id="features-title" class="section-title">كل ما تحتاجه في منصة واحدة</h2>
            <p class="section-subtitle">أدوات متكاملة لإدارة الحوكمة والمخاطر والامتثال بكفاءة وفعالية</p>
        </div>

        <div class="features-grid" role="list">
            @foreach (var feature in Model.Features.Take(6))
            {
                <article class="feature-card fade-in" role="listitem">
                    <div class="feature-icon" aria-hidden="true">
                        @if (feature.Icon?.Contains("shield") == true)
                        {
                            <i class="bi bi-shield-check"></i>
                        }
                        else if (feature.Icon?.Contains("chart") == true)
                        {
                            <i class="bi bi-graph-up-arrow"></i>
                        }
                        else if (feature.Icon?.Contains("check") == true)
                        {
                            <i class="bi bi-check-circle"></i>
                        }
                        else if (feature.Icon?.Contains("file") == true)
                        {
                            <i class="bi bi-file-earmark-text"></i>
                        }
                        else if (feature.Icon?.Contains("users") == true)
                        {
                            <i class="bi bi-people"></i>
                        }
                        else
                        {
                            <i class="bi bi-lightning-charge"></i>
                        }
                    </div>
                    <h3 class="feature-title">@(feature.TitleAr ?? feature.Title)</h3>
                    <p class="feature-desc">@feature.Description</p>
                </article>
            }
        </div>
    </div>
</section>

<!-- Regulators Section -->
<section class="regulators-section" aria-labelledby="regulators-title">
    <div class="container">
        <div class="section-header">
            <span class="section-eyebrow">الجهات التنظيمية</span>
            <h2 id="regulators-title" class="section-title">دعم شامل للأطر التنظيمية</h2>
            <p class="section-subtitle">متوافق مع جميع الجهات التنظيمية في المملكة العربية السعودية</p>
        </div>

        <div class="regulators-grid" role="list" aria-label="الجهات التنظيمية المدعومة">
            @foreach (var reg in Model.Regulators)
            {
                <span class="regulator-tag" role="listitem">@reg</span>
            }
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="section" aria-labelledby="how-title">
    <div class="container">
        <div class="section-header">
            <span class="section-eyebrow">كيف تعمل المنصة</span>
            <h2 id="how-title" class="section-title">أربع خطوات للامتثال الكامل</h2>
        </div>

        <div class="steps-grid" role="list">
            <div class="step-card fade-in" role="listitem">
                <div class="step-number" aria-hidden="true">1</div>
                <h3 class="step-title">التقييم</h3>
                <p class="step-desc">فهم البيئة والمتطلبات التنظيمية المطبقة</p>
            </div>
            <div class="step-card fade-in" role="listitem">
                <div class="step-number" aria-hidden="true">2</div>
                <h3 class="step-title">التصميم</h3>
                <p class="step-desc">بناء خطة الامتثال وتحديد الضوابط</p>
            </div>
            <div class="step-card fade-in" role="listitem">
                <div class="step-number" aria-hidden="true">3</div>
                <h3 class="step-title">التنفيذ</h3>
                <p class="step-desc">تعيين المسؤوليات وجمع الأدلة</p>
            </div>
            <div class="step-card fade-in" role="listitem">
                <div class="step-number" aria-hidden="true">4</div>
                <h3 class="step-title">المراقبة</h3>
                <p class="step-desc">متابعة مستمرة وجاهزية للتدقيق</p>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
@if (Model.Testimonials?.Any() == true)
{
    <section class="section" style="background: var(--bg-secondary);" aria-labelledby="testimonials-title">
        <div class="container">
            <div class="section-header">
                <span class="section-eyebrow">آراء العملاء</span>
                <h2 id="testimonials-title" class="section-title">ماذا يقول عملاؤنا</h2>
            </div>

            <div class="testimonials-grid" role="list">
                @foreach (var testimonial in Model.Testimonials.Take(3))
                {
                    <article class="testimonial-card fade-in" role="listitem">
                        <blockquote class="testimonial-content">
                            "@(testimonial.ContentAr ?? testimonial.Content)"
                        </blockquote>
                        <div class="testimonial-author">
                            <div class="testimonial-avatar" aria-hidden="true">
                                @(testimonial.AuthorName?.FirstOrDefault())
                            </div>
                            <div class="testimonial-info">
                                <div class="testimonial-name">@testimonial.AuthorName</div>
                                <div class="testimonial-role">@testimonial.AuthorTitle - @testimonial.Company</div>
                            </div>
                        </div>
                    </article>
                }
            </div>
        </div>
    </section>
}

<!-- CTA Section -->
<section class="cta-section" aria-labelledby="cta-title">
    <div class="container">
        <h2 id="cta-title" class="cta-title">ابدأ رحلة الامتثال اليوم</h2>
        <p class="cta-subtitle">تجربة مجانية كاملة الميزات لمدة 7 أيام. بدون بطاقة ائتمان.</p>

        <div class="hero-actions">
            <a href="/Onboarding" class="btn btn-gradient btn-lg">
                ابدأ الآن مجاناً
                <i class="bi bi-arrow-left-circle-fill" aria-hidden="true"></i>
            </a>
            <a href="/Landing/Contact" class="btn btn-outline btn-lg">تحدث مع فريقنا</a>
        </div>

        <div class="cta-features" role="list" aria-label="مميزات التجربة">
            <div class="cta-feature" role="listitem">
                <span class="cta-feature-icon" aria-hidden="true">
                    <i class="bi bi-check-lg"></i>
                </span>
                <span>جميع الميزات متاحة</span>
            </div>
            <div class="cta-feature" role="listitem">
                <span class="cta-feature-icon" aria-hidden="true">
                    <i class="bi bi-check-lg"></i>
                </span>
                <span>بدون بطاقة ائتمان</span>
            </div>
            <div class="cta-feature" role="listitem">
                <span class="cta-feature-icon" aria-hidden="true">
                    <i class="bi bi-check-lg"></i>
                </span>
                <span>دعم فني خلال التجربة</span>
            </div>
            <div class="cta-feature" role="listitem">
                <span class="cta-feature-icon" aria-hidden="true">
                    <i class="bi bi-check-lg"></i>
                </span>
                <span>إلغاء في أي وقت</span>
            </div>
        </div>
    </div>
</section>
