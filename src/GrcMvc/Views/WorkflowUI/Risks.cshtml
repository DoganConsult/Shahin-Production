@{
    ViewData["Title"] = "Risk Management Workflows";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-exclamation-triangle text-danger me-2"></i>Risk Management Workflows
            </h1>
            <p class="text-muted">Manage risk assessments and treatment workflows</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary">
                <i class="fas fa-plus"></i> New Risk Assessment
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h3>3</h3><small>Critical Risks</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3>8</h3><small>High Risks</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>15</h3><small>Medium Risks</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>22</h3><small>Low Risks</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Active Risk Workflows</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Risk ID</th>
                            <th>Risk Title</th>
                            <th>Category</th>
                            <th>Risk Level</th>
                            <th>Treatment</th>
                            <th>Owner</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>RSK-2026-001</td>
                            <td>Data Breach via Third Party</td>
                            <td>Cybersecurity</td>
                            <td><span class="badge bg-danger">Critical</span></td>
                            <td>Mitigate</td>
                            <td>CISO</td>
                            <td><span class="badge bg-info">In Treatment</span></td>
                            <td><a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></a></td>
                        </tr>
                        <tr>
                            <td>RSK-2026-002</td>
                            <td>Regulatory Non-Compliance</td>
                            <td>Compliance</td>
                            <td><span class="badge bg-warning">High</span></td>
                            <td>Mitigate</td>
                            <td>Compliance Officer</td>
                            <td><span class="badge bg-warning">Assessment</span></td>
                            <td><a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></a></td>
                        </tr>
                        <tr>
                            <td>RSK-2026-003</td>
                            <td>Key Person Dependency</td>
                            <td>Operational</td>
                            <td><span class="badge bg-info">Medium</span></td>
                            <td>Accept</td>
                            <td>HR Director</td>
                            <td><span class="badge bg-success">Accepted</span></td>
                            <td><a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Risk by Category</h6>
                </div>
                <div class="card-body">
                    <canvas id="riskCategoryChart" height="200"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Treatment Status</h6>
                </div>
                <div class="card-body">
                    <canvas id="treatmentChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
