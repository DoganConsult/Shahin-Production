@{
    ViewData["Title"] = "Policy Workflows";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3">
                <i class="fas fa-file-contract text-primary me-2"></i>Policy Workflows
            </h1>
            <p class="text-muted">Manage policy review, approval, and publication workflows</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary">
                <i class="fas fa-plus"></i> New Policy
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center">
                    <h3>5</h3><small>Draft</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3>8</h3><small>Under Review</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>3</h3><small>Pending Approval</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>42</h3><small>Published</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-stream me-2"></i>Policy Workflow Queue</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Policy</th>
                            <th>Version</th>
                            <th>Category</th>
                            <th>Owner</th>
                            <th>Stage</th>
                            <th>Review Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Information Security Policy</td>
                            <td>v2.1</td>
                            <td>Security</td>
                            <td>CISO</td>
                            <td><span class="badge bg-info">Pending Approval</span></td>
                            <td>Jan 15, 2026</td>
                            <td>
                                <button class="btn btn-sm btn-success me-1"><i class="fas fa-check"></i></button>
                                <button class="btn btn-sm btn-danger"><i class="fas fa-times"></i></button>
                            </td>
                        </tr>
                        <tr>
                            <td>Data Classification Policy</td>
                            <td>v1.3</td>
                            <td>Data Protection</td>
                            <td>DPO</td>
                            <td><span class="badge bg-warning">Under Review</span></td>
                            <td>Jan 20, 2026</td>
                            <td><a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></a></td>
                        </tr>
                        <tr>
                            <td>Access Control Policy</td>
                            <td>v3.0</td>
                            <td>Security</td>
                            <td>IT Security</td>
                            <td><span class="badge bg-secondary">Draft</span></td>
                            <td>Feb 1, 2026</td>
                            <td><a href="#" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
