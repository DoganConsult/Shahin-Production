@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.DTOs.ExcellenceInitiativeDto
@{
    ViewData["Title"] = "Excellence Initiative Details";
    Layout = "_Layout";
    var initiativeId = ViewBag.InitiativeId ?? Model?.Id ?? Guid.Empty;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-info-circle"></i> Excellence Initiative Details</h2>
            <p class="text-muted">Detailed view and progress tracking</p>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@initiativeId" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </div>

    @if (Model != null)
    {
        var statusClass = Model.Status switch {
            "InProgress" => "bg-primary",
            "Completed" => "bg-success",
            "OnHold" => "bg-warning text-dark",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };

        <div class="row">
            <div class="col-md-8">
                <!-- Main Details Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>
                            <span class="badge @statusClass fs-6">@Model.Status</span>
                            <span class="badge bg-light text-dark ms-2">@Model.Type</span>
                        </span>
                        <span class="badge bg-secondary">@Model.Category</span>
                    </div>
                    <div class="card-body">
                        <h3>@Model.Name</h3>

                        <hr />

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted"><i class="bi bi-person"></i> Owner</h6>
                                <p class="fs-5">@Model.Owner</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted"><i class="bi bi-calendar"></i> Target Date</h6>
                                <p class="fs-5">
                                    @if (Model.TargetDate.HasValue)
                                    {
                                        var isOverdue = Model.TargetDate.Value < DateTime.UtcNow && Model.Status != "Completed";
                                        <span class="@(isOverdue ? "text-danger" : "")">
                                            @Model.TargetDate.Value.ToString("MMM dd, yyyy")
                                            @if (isOverdue)
                                            {
                                                <i class="bi bi-exclamation-triangle text-danger"></i>
                                            }
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not Set</span>
                                    }
                                </p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <h6 class="text-muted"><i class="bi bi-file-text"></i> Description</h6>
                            <p class="mb-4">@Model.Description</p>
                        }
                    </div>
                </div>

                <!-- Progress History (Placeholder) -->
                <div class="card shadow-sm">
                    <div class="card-header">
                        <i class="bi bi-clock-history"></i> Progress History
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            <div class="mb-3 d-flex">
                                <div class="me-3">
                                    <span class="badge bg-success rounded-circle p-2">
                                        <i class="bi bi-check"></i>
                                    </span>
                                </div>
                                <div>
                                    <strong>Initiative Created</strong>
                                    <p class="text-muted small mb-0">Initiative was created and assigned to @Model.Owner</p>
                                </div>
                            </div>
                            @if (Model.Status == "InProgress")
                            {
                                <div class="mb-3 d-flex">
                                    <div class="me-3">
                                        <span class="badge bg-primary rounded-circle p-2">
                                            <i class="bi bi-play"></i>
                                        </span>
                                    </div>
                                    <div>
                                        <strong>Work In Progress</strong>
                                        <p class="text-muted small mb-0">Currently at @((Model.Progress ?? 0).ToString("F0"))% completion</p>
                                    </div>
                                </div>
                            }
                            @if (Model.Status == "Completed")
                            {
                                <div class="mb-3 d-flex">
                                    <div class="me-3">
                                        <span class="badge bg-success rounded-circle p-2">
                                            <i class="bi bi-trophy"></i>
                                        </span>
                                    </div>
                                    <div>
                                        <strong>Completed</strong>
                                        <p class="text-muted small mb-0">Initiative successfully completed</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Progress Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-graph-up"></i> Progress
                    </div>
                    <div class="card-body text-center">
                        <div class="display-1 @((Model.Progress ?? 0) >= 100 ? "text-success" : "text-primary")">
                            @((Model.Progress ?? 0).ToString("F0"))%
                        </div>
                        <div class="progress mt-3" style="height: 30px;">
                            <div class="progress-bar @((Model.Progress ?? 0) >= 100 ? "bg-success" : "progress-bar-striped progress-bar-animated")"
                                 style="width: @(Model.Progress ?? 0)%">
                            </div>
                        </div>
                        @if ((Model.Progress ?? 0) >= 100)
                        {
                            <p class="text-success mt-3 mb-0"><i class="bi bi-check-circle-fill"></i> Completed</p>
                        }
                        else if ((Model.Progress ?? 0) > 0)
                        {
                            <p class="text-primary mt-3 mb-0"><i class="bi bi-clock"></i> In Progress</p>
                        }
                        else
                        {
                            <p class="text-muted mt-3 mb-0"><i class="bi bi-hourglass"></i> Not Started</p>
                        }
                    </div>
                </div>

                <!-- Quick Info -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <i class="bi bi-list-check"></i> Quick Info
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Type</span>
                            <span class="badge bg-secondary">@Model.Type</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Category</span>
                            <span class="badge bg-light text-dark">@Model.Category</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Status</span>
                            <span class="badge @statusClass">@Model.Status</span>
                        </li>
                    </ul>
                </div>

                <!-- Quick Actions -->
                <div class="card shadow-sm">
                    <div class="card-header">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </div>
                    <div class="card-body d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Initiative
                        </a>
                        @if (Model.Status != "Completed")
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Update Progress
                            </a>
                        }
                        <a asp-action="Dashboard" class="btn btn-outline-secondary">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Initiative not found or data is loading...
        </div>
    }
</div>
