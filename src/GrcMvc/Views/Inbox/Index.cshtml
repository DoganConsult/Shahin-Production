@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model List<GrcMvc.Models.Workflows.WorkflowNotification>
@{
    ViewData["Title"] = L["Inbox"];
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-inbox"></i> @L["Inbox"]</h2>
            <p class="text-muted">@L["ManageNotificationsAndTasks"]</p>
        </div>
        <div class="col text-end">
            @if (ViewBag.UnreadCount > 0)
            {
                <form asp-action="MarkAllAsRead" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-check2-all"></i> @L["MarkAllAsRead"]
                    </button>
                </form>
            }
            <a asp-action="Settings" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-gear"></i> @L["Settings"]
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h3 class="text-primary">@ViewBag.UnreadCount</h3>
                    <p class="mb-0 text-muted">@L["Unread"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h3>@Model.Count</h3>
                    <p class="mb-0 text-muted">@L["Total"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h3 class="text-warning">@Model.Count(n => n.Priority == "High" || n.Priority == "Urgent")</h3>
                    <p class="mb-0 text-muted">@L["HighPriority"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h3 class="text-info">@Model.Count(n => n.NotificationType == "Task")</h3>
                    <p class="mb-0 text-muted">@L["Tasks"]</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(!ViewBag.UnreadOnly ? "active" : "")" asp-action="Index" asp-route-unreadOnly="false">
                <i class="bi bi-list"></i> @L["All"]
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewBag.UnreadOnly ? "active" : "")" asp-action="Index" asp-route-unreadOnly="true">
                <i class="bi bi-envelope"></i> @L["UnreadOnly"]
                @if (ViewBag.UnreadCount > 0)
                {
                    <span class="badge bg-primary ms-1">@ViewBag.UnreadCount</span>
                }
            </a>
        </li>
    </ul>

    <!-- Notifications List -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">@L["NoNotifications"]</h4>
                    <p class="text-muted">@L["YourInboxIsEmpty"]</p>
                </div>
            }
            else
            {
                <div class="list-group list-group-flush">
                    @foreach (var notification in Model)
                    {
                        var isUnread = !notification.IsRead;
                        var priorityClass = notification.Priority switch
                        {
                            "Urgent" => "border-start border-danger border-4",
                            "High" => "border-start border-warning border-4",
                            _ => ""
                        };
                        var typeIcon = notification.NotificationType switch
                        {
                            "Task" => "bi-list-task text-primary",
                            "Approval" => "bi-check-circle text-success",
                            "Alert" => "bi-exclamation-triangle text-warning",
                            "Reminder" => "bi-clock text-info",
                            _ => "bi-bell text-secondary"
                        };

                        <a asp-action="Details" asp-route-id="@notification.Id"
                           class="list-group-item list-group-item-action @priorityClass @(isUnread ? "bg-light" : "")">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="d-flex align-items-start">
                                    <div class="me-3">
                                        <i class="bi @typeIcon fs-4"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1 @(isUnread ? "fw-bold" : "")">
                                            @notification.Subject
                                            @if (isUnread)
                                            {
                                                <span class="badge bg-primary ms-2">@L["New"]</span>
                                            }
                                        </h6>
                                        <p class="mb-1 text-muted small">@notification.Body?.Substring(0, Math.Min(100, notification.Body?.Length ?? 0))...</p>
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i> @notification.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                            @if (!string.IsNullOrEmpty(notification.NotificationType))
                                            {
                                                <span class="ms-2 badge bg-secondary">@notification.NotificationType</span>
                                            }
                                        </small>
                                    </div>
                                </div>
                                <div class="text-end">
                                    @if (notification.Priority == "Urgent" || notification.Priority == "High")
                                    {
                                        <span class="badge bg-danger">@notification.Priority</span>
                                    }
                                    @if (isUnread)
                                    {
                                        <form asp-action="MarkAsRead" asp-route-id="@notification.Id" method="post" class="d-inline mt-2">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-secondary" title="@L["MarkAsRead"]">
                                                <i class="bi bi-check"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (ViewBag.HasMore || ViewBag.CurrentPage > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-unreadOnly="@ViewBag.UnreadOnly">
                            <i class="bi bi-chevron-left"></i> @L["Previous"]
                        </a>
                    </li>
                }
                <li class="page-item disabled">
                    <span class="page-link">@L["Page"] @ViewBag.CurrentPage</span>
                </li>
                @if (ViewBag.HasMore)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-unreadOnly="@ViewBag.UnreadOnly">
                            @L["Next"] <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
