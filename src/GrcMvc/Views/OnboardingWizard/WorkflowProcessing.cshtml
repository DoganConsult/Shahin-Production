@model WizardSummaryDto
@using GrcMvc.Models.DTOs
@{
    ViewData["Title"] = "Onboarding In Progress";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tenantId = Model.TenantId;
    var wizardStatus = ViewData["WizardStatus"]?.ToString() ?? "Processing";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
                            <span class="visually-hidden">Processing...</span>
                        </div>
                    </div>

                    <h2 class="mb-3">Onboarding In Progress</h2>
                    <p class="text-muted mb-4">
                        Your workspace is being configured. This usually takes a few seconds.
                    </p>

                    <div class="alert alert-info d-inline-block">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Status:</strong> @wizardStatus
                    </div>

                    <div class="mt-4">
                        <ol class="list-group list-group-flush text-start">
                            <li class="list-group-item d-flex align-items-center">
                                <i class="fas fa-check-circle text-success me-3"></i>
                                Syncing organization profile
                            </li>
                            <li class="list-group-item d-flex align-items-center">
                                <i class="fas fa-spinner fa-spin text-primary me-3"></i>
                                Creating default workspace
                            </li>
                            <li class="list-group-item d-flex align-items-center text-muted">
                                <i class="fas fa-circle me-3"></i>
                                Setting up teams and RACI
                            </li>
                            <li class="list-group-item d-flex align-items-center text-muted">
                                <i class="fas fa-circle me-3"></i>
                                Finalizing configuration
                            </li>
                        </ol>
                    </div>

                    <p class="text-muted small mt-4 mb-0">
                        <i class="fas fa-sync-alt me-1"></i>
                        This page will automatically redirect when complete.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 3 seconds to check if processing is complete
        (function() {
            let refreshCount = 0;
            const maxRefreshes = 20; // Stop after ~60 seconds

            function checkStatus() {
                refreshCount++;
                if (refreshCount >= maxRefreshes) {
                    // Show manual refresh option after timeout
                    document.querySelector('.spinner-border')?.classList.add('d-none');
                    const alertDiv = document.createElement('div');
                    alertDiv.className = 'alert alert-warning mt-3';
                    alertDiv.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i>Taking longer than expected. <a href="javascript:location.reload()" class="alert-link">Click to refresh</a>';
                    document.querySelector('.card-body')?.appendChild(alertDiv);
                    return;
                }

                // Reload the page to check status (controller will redirect if complete)
                setTimeout(function() {
                    location.reload();
                }, 3000);
            }

            checkStatus();
        })();
    </script>
}
