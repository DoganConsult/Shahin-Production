@section Scripts {
    @* Issue #18: Use partial which includes both CSS files *@
    @await Html.PartialAsync("_WizardMotivation")
    <script>
        function copyTenantId(evt) {
            const tenantId = document.getElementById('tenantIdValue').innerText.trim();
            const btn = evt?.target?.closest('button');

            navigator.clipboard.writeText(tenantId).then(function() {
                // Button micro-feedback (fast, non-flashy)
                const originalHtml = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check text-success"></i> Copied';
                btn.classList.remove('btn-outline-primary');
                btn.classList.add('btn-success');

                // Toast
                const toastEl = document.getElementById('wzCopyToast');
                if (toastEl && window.bootstrap) {
                    const t = new bootstrap.Toast(toastEl, { delay: 1600 });
                    t.show();
                }

                setTimeout(function() {
                    btn.innerHTML = originalHtml;
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-outline-primary');
                }, 1400);
            }).catch(function() {
                // Safe fallback
                alert('Copy failed. Please select and copy manually: ' + tenantId);
            });
        }

        // Finalize overlay (staged progress)
        document.querySelector('form[asp-action="FinalizeOnboarding"]')?.addEventListener('submit', function() {
            const overlay = document.getElementById('wzFinalizeOverlay');
            overlay?.classList.remove('d-none');
        });
    </script>
