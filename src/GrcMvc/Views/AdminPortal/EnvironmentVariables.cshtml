@model Dictionary<string, List<GrcMvc.Services.Interfaces.EnvironmentVariableItem>>
@{
    ViewData["Title"] = "Environment Variables";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "AdminPortal")">Platform Admin</a></li>
            <li class="breadcrumb-item active">Environment Variables</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1"><i class="bi bi-sliders"></i> Environment Variables</h1>
            <p class="text-muted mb-0">Manage application configuration through environment variables</p>
        </div>
        <div>
            <span class="badge bg-info">Environment: @ViewBag.Environment</span>
            @if (ViewBag.IsWritable == true)
            {
                <span class="badge bg-success">Writable</span>
            }
            else
            {
                <span class="badge bg-warning">Read-Only</span>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="alert alert-info">
        <i class="bi bi-shield-lock"></i>
        <strong>ABP Settings Integration:</strong> Variables are now stored in ABP Settings (encrypted in database) with fallback to environment variables. 
        Changes take effect immediately without restart. Secrets are encrypted at rest.
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-arrow-repeat"></i> Migration to ABP Settings</h5>
                </div>
                <div class="card-body">
                    <p>Migrate existing environment variables from <code>.env</code> file to ABP Settings (encrypted database storage).</p>
                    <form method="post" action="@Url.Action("MigrateToAbpSettings", "AdminPortal")" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success" onclick="return confirm('This will copy all environment variables to ABP Settings. Continue?');">
                            <i class="bi bi-upload"></i> Migrate to ABP Settings
                        </button>
                    </form>
                    <small class="text-muted d-block mt-2">
                        This copies values from .env file to ABP Settings. Existing ABP Settings values are preserved.
                    </small>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-trash"></i> Clear Caches</h5>
                </div>
                <div class="card-body">
                    <p>Clear all caches and reload configuration to ensure new environment variables are picked up immediately.</p>
                    <form method="post" action="@Url.Action("ClearAllCaches", "AdminPortal")" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning" onclick="return confirm('This will clear all caches and reload configuration. Continue?');">
                            <i class="bi bi-arrow-clockwise"></i> Clear All Caches & Reload Config
                        </button>
                    </form>
                    <small class="text-muted d-block mt-2">
                        Clears memory cache, reloads IConfiguration, and ensures all layers use fresh values.
                    </small>
                </div>
            </div>
        </div>
    </div>

    <form id="envVarsForm" method="post" action="@Url.Action("UpdateEnvironmentVariables", "AdminPortal")">
        @Html.AntiForgeryToken()
        <input type="hidden" name="useAbpSettings" value="true" />
        <input type="hidden" name="clearCache" value="true" />

        <div class="row">
            @foreach (var category in Model.Keys.OrderBy(k => k))
            {
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-folder"></i> @category
                                <span class="badge bg-light text-dark ms-2">@Model[category].Count variables</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th style="width: 30%">Variable Name</th>
                                            <th style="width: 50%">Value</th>
                                            <th style="width: 20%">Info</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var variable in Model[category].OrderBy(v => v.Key))
                                        {
                                            <tr>
                                                <td>
                                                    <code>@variable.Key</code>
                                                    @if (variable.IsRequired)
                                                    {
                                                        <span class="badge bg-danger ms-1">Required</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (variable.IsSecret)
                                                    {
                                                        <input type="password" 
                                                               class="form-control form-control-sm" 
                                                               name="variables[@variable.Key]" 
                                                               value="@variable.CurrentValue"
                                                               placeholder="Enter value..."
                                                               autocomplete="off">
                                                        <button type="button" 
                                                                class="btn btn-sm btn-outline-secondary mt-1 toggle-password" 
                                                                data-target="variables[@variable.Key]">
                                                            <i class="bi bi-eye"></i> Show
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <input type="text" 
                                                               class="form-control form-control-sm" 
                                                               name="variables[@variable.Key]" 
                                                               value="@variable.CurrentValue"
                                                               placeholder="Enter value...">
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(variable.Description))
                                                    {
                                                        <small class="text-muted d-block" title="@variable.Description">
                                                            <i class="bi bi-info-circle"></i> @variable.Description
                                                        </small>
                                                    }
                                                    @{
                                                        var envVarService = ViewBag.EnvVarService as GrcMvc.Services.Interfaces.IEnvironmentVariableService;
                                                        var abpSettingName = envVarService?.GetAbpSettingName(variable.Key);
                                                        var isInAbp = !string.IsNullOrEmpty(abpSettingName);
                                                    }
                                                    @if (string.IsNullOrEmpty(variable.CurrentValue) && variable.IsRequired)
                                                    {
                                                        <span class="badge bg-warning text-dark">Not Set</span>
                                                    }
                                                    else if (!string.IsNullOrEmpty(variable.CurrentValue))
                                                    {
                                                        <span class="badge bg-success">Set</span>
                                                        @if (isInAbp)
                                                        {
                                                            <span class="badge bg-primary" title="Stored in ABP Settings (encrypted)">
                                                                <i class="bi bi-shield-lock"></i> ABP
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary" title="From environment variable">
                                                                <i class="bi bi-file-code"></i> Env
                                                            </span>
                                                        }
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>File Location:</strong> <code>@ViewBag.EnvFilePath</code>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> Save to ABP Settings (Encrypted)
                        </button>
                        <small class="text-muted d-block mt-2">
                            Values are encrypted and stored in database. Changes take effect immediately.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Toggle password visibility
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function() {
                const targetName = this.getAttribute('data-target');
                const input = document.querySelector(`input[name="${targetName}"]`);
                const icon = this.querySelector('i');
                
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('bi-eye');
                    icon.classList.add('bi-eye-slash');
                    this.innerHTML = '<i class="bi bi-eye-slash"></i> Hide';
                } else {
                    input.type = 'password';
                    icon.classList.remove('bi-eye-slash');
                    icon.classList.add('bi-eye');
                    this.innerHTML = '<i class="bi bi-eye"></i> Show';
                }
            });
        });

        // Form validation
        document.getElementById('envVarsForm').addEventListener('submit', function(e) {
            const requiredFields = document.querySelectorAll('input[type="password"], input[type="text"]');
            let hasErrors = false;
            
            requiredFields.forEach(input => {
                const row = input.closest('tr');
                const requiredBadge = row.querySelector('.badge.bg-danger');
                
                if (requiredBadge && !input.value.trim()) {
                    input.classList.add('is-invalid');
                    hasErrors = true;
                } else {
                    input.classList.remove('is-invalid');
                }
            });
            
            if (hasErrors) {
                e.preventDefault();
                alert('Please fill in all required fields (marked with red "Required" badge)');
                return false;
            }
            
            return confirm('Are you sure you want to save these changes? The application may need to be restarted for some changes to take effect.');
        });
    </script>
}
