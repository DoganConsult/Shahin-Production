@{
    ViewData["Title"] = "Owner Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>
                <i class="bi bi-shield-check"></i> Owner Dashboard
            </h1>
            <p class="text-muted">Manage tenants and generate admin accounts</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-left-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase mb-1">Total Tenants</h6>
                            <h3 class="mb-0">@ViewBag.TotalTenants</h3>
                        </div>
                        <i class="bi bi-building text-primary" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-left-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase mb-1">Owner Created</h6>
                            <h3 class="mb-0">@ViewBag.OwnerCreatedTenants</h3>
                        </div>
                        <i class="bi bi-plus-circle text-success" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-left-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase mb-1">Active Tenants</h6>
                            <h3 class="mb-0">@ViewBag.ActiveTenants</h3>
                        </div>
                        <i class="bi bi-check-circle text-info" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-left-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase mb-1">With Admin Account</h6>
                            <h3 class="mb-0">@ViewBag.TenantsWithAdmin</h3>
                        </div>
                        <i class="bi bi-person-check text-warning" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-flex">
                        <a asp-action="Create" asp-controller="Owner" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create New Tenant
                        </a>
                        <a asp-action="Tenants" asp-controller="Owner" class="btn btn-outline-primary">
                            <i class="bi bi-list"></i> View All Tenants
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
