@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Services.Interfaces.SustainabilityImprovementDto
@{
    ViewData["Title"] = "Initiative Details";
    Layout = "_Layout";
    var initiativeId = ViewBag.InitiativeId ?? Model?.Id ?? Guid.Empty;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-info-circle"></i> Initiative Details</h2>
            <p class="text-muted">Sustainability initiative information and progress</p>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@initiativeId" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </div>

    @if (Model != null)
    {
        var statusClass = Model.Status switch {
            "InProgress" => "bg-primary",
            "Completed" => "bg-success",
            "OnHold" => "bg-warning text-dark",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
        var priorityClass = Model.Priority switch {
            "Critical" => "bg-danger",
            "High" => "bg-warning text-dark",
            "Medium" => "bg-info",
            _ => "bg-secondary"
        };

        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>
                            <code class="me-2">@Model.InitiativeCode</code>
                            <span class="badge @statusClass">@Model.Status</span>
                            @if (!string.IsNullOrEmpty(Model.StatusAr))
                            {
                                <span class="badge bg-light text-dark" dir="rtl">@Model.StatusAr</span>
                            }
                        </span>
                        <span class="badge @priorityClass">@Model.Priority Priority</span>
                    </div>
                    <div class="card-body">
                        <h3>@Model.Title</h3>
                        @if (!string.IsNullOrEmpty(Model.TitleAr))
                        {
                            <h4 class="text-muted" dir="rtl">@Model.TitleAr</h4>
                        }

                        <hr />

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted">Category</h6>
                                <p><span class="badge bg-light text-dark fs-6">@Model.Category</span></p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted">Owner</h6>
                                <p><i class="bi bi-person"></i> @Model.Owner</p>
                            </div>
                        </div>

                        <h6 class="text-muted">Description</h6>
                        <p class="mb-4">@Model.Description</p>

                        @if (!string.IsNullOrEmpty(Model.Outcomes))
                        {
                            <h6 class="text-muted">Outcomes / Notes</h6>
                            <p class="mb-4">@Model.Outcomes</p>
                        }
                    </div>
                </div>

                <!-- Timeline Card -->
                <div class="card shadow-sm">
                    <div class="card-header">
                        <i class="bi bi-calendar-event"></i> Timeline & Milestones
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center border-end">
                                <small class="text-muted">Created</small>
                                <h5>@Model.CreatedAt.ToString("MMM dd, yyyy")</h5>
                            </div>
                            <div class="col-md-4 text-center border-end">
                                <small class="text-muted">Target Completion</small>
                                @if (Model.TargetDate.HasValue)
                                {
                                    var isOverdue = Model.TargetDate.Value < DateTime.UtcNow && Model.Status != "Completed";
                                    <h5 class="@(isOverdue ? "text-danger" : "")">
                                        @Model.TargetDate.Value.ToString("MMM dd, yyyy")
                                        @if (isOverdue)
                                        {
                                            <i class="bi bi-exclamation-circle text-danger"></i>
                                        }
                                    </h5>
                                }
                                else
                                {
                                    <h5 class="text-muted">Not Set</h5>
                                }
                            </div>
                            <div class="col-md-4 text-center">
                                <small class="text-muted">Completed</small>
                                @if (Model.CompletedAt.HasValue)
                                {
                                    <h5 class="text-success">
                                        @Model.CompletedAt.Value.ToString("MMM dd, yyyy")
                                        <i class="bi bi-check-circle"></i>
                                    </h5>
                                }
                                else
                                {
                                    <h5 class="text-muted">In Progress</h5>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Progress Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-graph-up"></i> Progress
                    </div>
                    <div class="card-body text-center">
                        <div class="display-1 @(Model.PercentComplete >= 100 ? "text-success" : "text-primary")">
                            @Model.PercentComplete.ToString("F0")%
                        </div>
                        <div class="progress mt-3" style="height: 30px;">
                            <div class="progress-bar @(Model.PercentComplete >= 100 ? "bg-success" : "progress-bar-striped progress-bar-animated")"
                                 style="width: @Model.PercentComplete%">
                            </div>
                        </div>
                        @if (Model.PercentComplete >= 100)
                        {
                            <p class="text-success mt-2"><i class="bi bi-check-circle-fill"></i> Complete</p>
                        }
                    </div>
                </div>

                <!-- Impact Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <i class="bi bi-bullseye"></i> Impact Assessment
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6 border-end">
                                <small class="text-muted">Expected</small>
                                <h3 class="text-info">@Model.ExpectedImpact.ToString("F0")%</h3>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Actual</small>
                                <h3 class="@(Model.ActualImpact >= Model.ExpectedImpact ? "text-success" : "text-warning")">
                                    @Model.ActualImpact.ToString("F0")%
                                </h3>
                            </div>
                        </div>
                        @if (Model.ActualImpact > 0 && Model.ExpectedImpact > 0)
                        {
                            var variance = Model.ActualImpact - Model.ExpectedImpact;
                            <div class="text-center mt-3">
                                <small class="text-muted">Variance</small>
                                <h5 class="@(variance >= 0 ? "text-success" : "text-danger")">
                                    @(variance >= 0 ? "+" : "")@variance.ToString("F0")%
                                </h5>
                            </div>
                        }
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card shadow-sm">
                    <div class="card-header">
                        <i class="bi bi-lightning"></i> Quick Actions
                    </div>
                    <div class="card-body d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Initiative
                        </a>
                        @if (Model.Status != "Completed")
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Update Progress
                            </a>
                        }
                        <a asp-action="Dashboard" class="btn btn-outline-secondary">
                            <i class="bi bi-speedometer2"></i> View Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Initiative not found or data is loading...
        </div>
    }
</div>
