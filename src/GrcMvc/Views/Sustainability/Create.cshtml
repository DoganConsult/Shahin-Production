@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Services.Interfaces.CreateImprovementDto
@{
    ViewData["Title"] = "Create Sustainability Initiative";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-plus-circle"></i> Create Sustainability Initiative</h2>
            <p class="text-muted">Define a new continuous improvement initiative</p>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Title <span class="text-danger">*</span></label>
                                <input type="text" name="Title" class="form-control" required placeholder="Initiative title" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Title (Arabic)</label>
                                <input type="text" name="TitleAr" class="form-control" dir="rtl" placeholder="عنوان المبادرة" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description <span class="text-danger">*</span></label>
                            <textarea name="Description" class="form-control" rows="4" required placeholder="Describe the improvement initiative, objectives, and expected outcomes"></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Category <span class="text-danger">*</span></label>
                                <select name="Category" class="form-select" required>
                                    <option value="">Select Category</option>
                                    <option value="Process">Process Improvement</option>
                                    <option value="Technology">Technology Enhancement</option>
                                    <option value="People">People & Training</option>
                                    <option value="Policy">Policy & Governance</option>
                                    <option value="Compliance">Compliance Program</option>
                                    <option value="Risk">Risk Management</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Priority <span class="text-danger">*</span></label>
                                <select name="Priority" class="form-select" required>
                                    <option value="Low">Low</option>
                                    <option value="Medium" selected>Medium</option>
                                    <option value="High">High</option>
                                    <option value="Critical">Critical</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Expected Impact (%) <span class="text-danger">*</span></label>
                                <input type="number" name="ExpectedImpact" class="form-control" min="0" max="100" value="0" required />
                                <small class="text-muted">Expected maturity improvement</small>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Owner <span class="text-danger">*</span></label>
                                <input type="text" name="Owner" class="form-control" required placeholder="Responsible person or team" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Target Completion Date</label>
                                <input type="date" name="TargetDate" class="form-control" />
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Initiative
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5><i class="bi bi-info-circle"></i> Guidelines</h5>
                    <ul class="small">
                        <li><strong>Process:</strong> Workflow optimization, automation, efficiency improvements</li>
                        <li><strong>Technology:</strong> Tool upgrades, system integrations, digital transformation</li>
                        <li><strong>People:</strong> Training programs, skill development, awareness campaigns</li>
                        <li><strong>Policy:</strong> Policy updates, governance frameworks, standards alignment</li>
                        <li><strong>Compliance:</strong> Regulatory compliance programs, certification preparation</li>
                        <li><strong>Risk:</strong> Risk assessment improvements, mitigation strategies</li>
                    </ul>
                    <hr />
                    <h6><i class="bi bi-lightbulb"></i> Tips</h6>
                    <ul class="small text-muted">
                        <li>Set realistic target dates</li>
                        <li>Define measurable outcomes</li>
                        <li>Assign clear ownership</li>
                        <li>Align with strategic objectives</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
