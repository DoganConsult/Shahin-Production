@using GrcMvc.Services.Interfaces
@inject IUsageTrackingService UsageService
@inject GrcMvc.Services.Interfaces.ITenantContextService TenantContext
@{
    var tenantId = TenantContext.GetCurrentTenantId();
    UsageSummaryDto? usage = null;
    
    if (tenantId != Guid.Empty)
    {
        try
        {
            usage = await UsageService.GetUsageSummaryAsync(tenantId);
        }
        catch { /* Ignore errors in banner */ }
    }
}

@if (usage != null && usage.IsTrial)
{
    var bannerClass = usage.DaysRemaining <= 0 ? "bg-danger" : 
                      usage.DaysRemaining <= 2 ? "bg-warning" : "bg-info";
    var textClass = usage.DaysRemaining <= 2 ? "text-dark" : "text-white";
    
    <div id="trial-banner" class="@bannerClass @textClass py-2 px-3 d-flex align-items-center justify-content-between" 
         style="position: sticky; top: 0; z-index: 1050;">
        <div class="d-flex align-items-center">
            @if (usage.DaysRemaining <= 0)
            {
                <i class="fas fa-exclamation-triangle me-2"></i>
                <span>
                    <strong>@Localizer["TrialExpired"]</strong> - 
                    @Localizer["TrialExpiredMessage"]
                </span>
            }
            else if (usage.DaysRemaining <= 2)
            {
                <i class="fas fa-clock me-2"></i>
                <span>
                    <strong>@Localizer["TrialExpiringSoon"]</strong> - 
                    @string.Format(Localizer["TrialExpiresInDays"].Value, usage.DaysRemaining)
                </span>
            }
            else
            {
                <i class="fas fa-info-circle me-2"></i>
                <span>
                    <strong>@Localizer["FreeTrial"]</strong> - 
                    @string.Format(Localizer["TrialDaysRemaining"].Value, usage.DaysRemaining)
                </span>
            }
            
            <!-- Usage indicators -->
            <span class="ms-3 d-none d-md-inline">
                <span class="badge bg-light text-dark me-1" title="AI Calls Today">
                    <i class="fas fa-robot"></i> @usage.AiCallsToday/@usage.AiCallsLimit
                </span>
                <span class="badge bg-light text-dark me-1" title="Frameworks">
                    <i class="fas fa-layer-group"></i> @usage.FrameworkCount/@usage.FrameworkLimit
                </span>
                <span class="badge bg-light text-dark" title="Team Members">
                    <i class="fas fa-users"></i> @usage.TeamMemberCount/@usage.TeamMemberLimit
                </span>
            </span>
        </div>
        
        <div class="d-flex align-items-center">
            <a href="/pricing" class="btn btn-sm @(usage.DaysRemaining <= 0 ? "btn-light" : "btn-success") me-2">
                <i class="fas fa-rocket me-1"></i>
                @Localizer["UpgradeNow"]
            </a>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" 
                    onclick="dismissTrialBanner()" aria-label="Close"></button>
        </div>
    </div>
    
    <!-- Usage warnings if any -->
    @if (usage.Warnings.Any(w => w.Type != "trial"))
    {
        <div class="alert alert-warning alert-dismissible fade show mb-0 rounded-0" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <div>
                    @foreach (var warning in usage.Warnings.Where(w => w.Type != "trial"))
                    {
                        <span class="me-3">
                            @if (System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "ar")
                            {
                                @warning.MessageAr
                            }
                            else
                            {
                                @warning.Message
                            }
                        </span>
                    }
                </div>
                <a href="/pricing" class="btn btn-sm btn-warning ms-auto">@Localizer["UpgradePlan"]</a>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <script>
        function dismissTrialBanner() {
            document.getElementById('trial-banner').style.display = 'none';
            // Store dismissal in session (banner will reappear on next session)
            sessionStorage.setItem('trialBannerDismissed', 'true');
        }
        
        // Check if banner was dismissed this session
        document.addEventListener('DOMContentLoaded', function() {
            if (sessionStorage.getItem('trialBannerDismissed') === 'true') {
                var banner = document.getElementById('trial-banner');
                if (banner) banner.style.display = 'none';
            }
        });
    </script>
}
