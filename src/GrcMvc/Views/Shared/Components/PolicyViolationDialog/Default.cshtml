@model GrcMvc.ViewComponents.PolicyViolationViewModel

<div class="modal fade" id="policyViolationModal" tabindex="-1" role="dialog" aria-labelledby="policyViolationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="policyViolationModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> Policy Violation
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">
                    <h6 class="alert-heading">@Model.Message</h6>
                    <hr>
                    @if (!string.IsNullOrEmpty(Model.RuleId))
                    {
                        <p class="mb-0"><strong>Rule ID:</strong> @Model.RuleId</p>
                    }
                </div>

                @if (!string.IsNullOrEmpty(Model.RemediationHint))
                {
                    <div class="alert alert-info" role="alert">
                        <h6 class="alert-heading">Remediation Steps</h6>
                        <p class="mb-0">@Model.RemediationHint</p>
                    </div>
                }

                @if (Model.Violations != null && Model.Violations.Any())
                {
                    <div class="mt-3">
                        <h6>Violations:</h6>
                        <ul class="list-group">
                            @foreach (var violation in Model.Violations)
                            {
                                <li class="list-group-item">@violation</li>
                            }
                        </ul>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                @if (!string.IsNullOrEmpty(Model.RetryUrl))
                {
                    <a href="@Model.RetryUrl" class="btn btn-primary">Retry</a>
                }
            </div>
        </div>
    </div>
</div>

@if (Model.AutoShow)
{
    <script>
        $(document).ready(function() {
            $('#policyViolationModal').modal('show');
        });
    </script>
}
