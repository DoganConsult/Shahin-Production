@model GrcMvc.ViewComponents.DashboardWidgetModel

@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture;
    var isRtl = culture.TextInfo.IsRightToLeft;
}

<div class="card grc-dashboard-widget border-0 shadow-sm h-100">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <p class="text-muted small mb-1">@Model.Title</p>
                <h3 class="mb-0 fw-bold">@Model.Value</h3>
                @if (!string.IsNullOrEmpty(Model.Subtitle))
                {
                    <small class="text-muted">@Model.Subtitle</small>
                }
            </div>
            <div class="rounded-3 p-3 bg-@Model.Color bg-opacity-10">
                <i class="bi @Model.Icon fs-4 text-@Model.Color"></i>
            </div>
        </div>

        @if (Model.Change.HasValue)
        {
            var isPositive = Model.Change > 0;
            var changeColor = isPositive ? "success" : "danger";
            var changeIcon = isPositive ? "bi-arrow-up" : "bi-arrow-down";
            <div class="mt-3 pt-2 border-top">
                <span class="badge bg-@changeColor bg-opacity-10 text-@changeColor">
                    <i class="bi @changeIcon me-1"></i>
                    @Math.Abs(Model.Change.Value).ToString("0.#")%
                </span>
                <span class="text-muted small ms-1">
                    @(Model.ChangeLabel ?? Localizer["Widget_VsLastMonth"].Value)
                </span>
            </div>
        }
    </div>

    @if (!string.IsNullOrEmpty(Model.Link))
    {
        <div class="card-footer bg-transparent border-0 pt-0">
            <a href="@Model.Link" class="text-@Model.Color text-decoration-none small">
                @Model.LinkText
                <i class="bi bi-arrow-@(isRtl ? "left" : "right") ms-1"></i>
            </a>
        </div>
    }
</div>
