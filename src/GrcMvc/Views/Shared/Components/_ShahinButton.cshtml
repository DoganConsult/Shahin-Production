@*
    SHAHIN AI GRC - Button Component
    Usage: <partial name="Components/_ShahinButton" model='new { Text = "Save", Type = "primary", Size = "md", IsBlock = false, Icon = "save", Disabled = false }' />
*@
@{
    dynamic model = ViewData.Model ?? new { };
    var text = model?.Text ?? "Button";
    var type = model?.Type ?? "primary"; // primary, secondary, success, danger, ghost, outline
    var size = model?.Size ?? "base"; // xs, sm, base, lg, xl
    var isBlock = model?.IsBlock ?? false;
    var icon = model?.Icon ?? "";
    var disabled = model?.Disabled ?? false;
    var onClick = model?.OnClick ?? "";
    var id = model?.Id ?? "";
    var cssClass = model?.CssClass ?? "";

    var buttonClass = $"shahin-btn shahin-btn-{type}";
    if (!string.IsNullOrEmpty(size) && size != "base") {
        buttonClass += $" shahin-btn-{size}";
    }
    if (isBlock) {
        buttonClass += " shahin-btn-block";
    }
    if (!string.IsNullOrEmpty(cssClass)) {
        buttonClass += $" {cssClass}";
    }
}

<button
    type="button"
    @if(!string.IsNullOrEmpty(id)) { <text>id="@id"</text> }
    class="@buttonClass"
    @if(disabled) { <text>disabled</text> }
    @if(!string.IsNullOrEmpty(onClick)) { <text>onclick="@onClick"</text> }>
    @if(!string.IsNullOrEmpty(icon)) {
        <i class="bi bi-@icon"></i>
    }
    @text
</button>
