@*
    SHAHIN AI GRC - Badge Component
    Usage: <partial name="Components/_ShahinBadge" model='new { Text = "Active", Type = "success" }' />
*@
@{
    dynamic model = ViewData.Model ?? new { };
    var text = model?.Text ?? "Badge";
    var type = model?.Type ?? "primary"; // primary, success, warning, danger, info, neutral
    var cssClass = model?.CssClass ?? "";

    var badgeClass = $"shahin-badge shahin-badge-{type}";
    if (!string.IsNullOrEmpty(cssClass)) {
        badgeClass += $" {cssClass}";
    }
}

<span class="@badgeClass">@text</span>
