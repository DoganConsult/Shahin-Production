@model GrcMvc.ViewComponents.EvidenceUploaderModel

<div class="evidence-uploader-container">
    <div class="upload-zone border-2 border-dashed rounded-lg p-4 text-center" id="upload-zone">
        <i class="bi bi-cloud-arrow-up fs-1 text-emerald-500 mb-2"></i>
        <h6 class="mb-2">Drop files here or click to upload</h6>
        <p class="text-muted small mb-3">
            Supported: @string.Join(", ", Model.AcceptedFileTypes) (Max @Model.MaxFileSizeMb MB)
        </p>
        <input type="file" id="evidence-file-input" class="d-none" multiple
               accept="@string.Join(",", Model.AcceptedFileTypes)"
               data-control-id="@Model.ControlId"
               data-assessment-id="@Model.AssessmentId" />
        <button type="button" class="btn btn-outline-emerald" onclick="document.getElementById('evidence-file-input').click()">
            <i class="bi bi-folder-plus me-2"></i>Select Files
        </button>
    </div>

    @if (Model.ShowAiTagging && Model.AiAvailable)
    {
        <div class="ai-tagging-info mt-3 p-3 bg-emerald-50 dark:bg-emerald-900 rounded-lg">
            <div class="d-flex align-items-center">
                <span class="ai-badge me-2">ðŸ¤– AI</span>
                <span class="small">Auto-tagging enabled - files will be automatically categorized</span>
            </div>
        </div>
    }

    <div id="upload-preview" class="mt-3"></div>
    <div id="upload-progress" class="mt-3 d-none">
        <div class="progress" style="height: 4px;">
            <div class="progress-bar bg-emerald-500" id="upload-progress-bar" style="width: 0%"></div>
        </div>
        <div class="d-flex justify-content-between mt-1">
            <span id="upload-status" class="small text-muted">Uploading...</span>
            <span id="upload-percent" class="small text-muted">0%</span>
        </div>
    </div>
</div>

<style>
.evidence-uploader-container .upload-zone {
    background: #f8fafc;
    border-color: #cbd5e1 !important;
    transition: all 0.2s;
    cursor: pointer;
}

.dark .evidence-uploader-container .upload-zone {
    background: #1e293b;
    border-color: #475569 !important;
}

.evidence-uploader-container .upload-zone:hover,
.evidence-uploader-container .upload-zone.dragover {
    border-color: #10b981 !important;
    background: #ecfdf5;
}

.dark .evidence-uploader-container .upload-zone:hover {
    background: #064e3b;
}

.ai-badge {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
}

.file-preview-item {
    display: flex;
    align-items: center;
    padding: 0.75rem;
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    margin-bottom: 0.5rem;
}

.dark .file-preview-item {
    background: #334155;
    border-color: #475569;
}
</style>

<script>
(function() {
    const zone = document.getElementById('upload-zone');
    const input = document.getElementById('evidence-file-input');
    const preview = document.getElementById('upload-preview');
    const progressContainer = document.getElementById('upload-progress');
    const progressBar = document.getElementById('upload-progress-bar');

    // Drag & drop
    zone.addEventListener('dragover', (e) => {
        e.preventDefault();
        zone.classList.add('dragover');
    });

    zone.addEventListener('dragleave', () => {
        zone.classList.remove('dragover');
    });

    zone.addEventListener('drop', (e) => {
        e.preventDefault();
        zone.classList.remove('dragover');
        handleFiles(e.dataTransfer.files);
    });

    zone.addEventListener('click', () => input.click());

    input.addEventListener('change', (e) => {
        handleFiles(e.target.files);
    });

    function handleFiles(files) {
        preview.innerHTML = '';
        Array.from(files).forEach(file => {
            const item = document.createElement('div');
            item.className = 'file-preview-item';
            item.innerHTML = `
                <i class="bi bi-file-earmark me-3 fs-4 text-emerald-500"></i>
                <div class="flex-grow-1">
                    <div class="fw-medium">${file.name}</div>
                    <div class="small text-muted">${formatFileSize(file.size)}</div>
                </div>
                <span class="badge bg-secondary">Ready</span>
            `;
            preview.appendChild(item);
        });

        if (files.length > 0) {
            uploadFiles(files);
        }
    }

    async function uploadFiles(files) {
        progressContainer.classList.remove('d-none');
        const formData = new FormData();
        Array.from(files).forEach(f => formData.append('files', f));

        if (input.dataset.controlId) formData.append('controlId', input.dataset.controlId);
        if (input.dataset.assessmentId) formData.append('assessmentId', input.dataset.assessmentId);

        try {
            const xhr = new XMLHttpRequest();
            xhr.upload.addEventListener('progress', (e) => {
                if (e.lengthComputable) {
                    const percent = Math.round((e.loaded / e.total) * 100);
                    progressBar.style.width = percent + '%';
                    document.getElementById('upload-percent').textContent = percent + '%';
                }
            });

            xhr.onload = function() {
                if (xhr.status === 200) {
                    document.getElementById('upload-status').textContent = 'Upload complete!';
                    setTimeout(() => progressContainer.classList.add('d-none'), 2000);
                }
            };

            xhr.open('POST', '/api/evidence/upload');
            xhr.setRequestHeader('RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]')?.value || '');
            xhr.send(formData);
        } catch (error) {
            console.error('Upload failed:', error);
        }
    }

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }
})();
</script>
