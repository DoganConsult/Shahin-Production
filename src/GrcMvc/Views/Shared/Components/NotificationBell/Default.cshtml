@model GrcMvc.ViewComponents.NotificationBellModel

<div class="dropdown grc-notification-bell">
    <button class="btn btn-link text-secondary position-relative p-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-bell fs-5"></i>
        @if (Model.UnreadCount > 0)
        {
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                @(Model.UnreadCount > 9 ? "9+" : Model.UnreadCount.ToString())
                <span class="visually-hidden">@Localizer["Notification_UnreadCount"]</span>
            </span>
        }
    </button>
    <div class="dropdown-menu dropdown-menu-end shadow-lg" style="width: 350px; max-height: 400px; overflow-y: auto;">
        <div class="dropdown-header d-flex justify-content-between align-items-center">
            <strong>@Localizer["Notification_Title"]</strong>
            @if (Model.UnreadCount > 0)
            {
                <a href="#" class="small text-primary text-decoration-none">
                    @Localizer["Notification_MarkAllRead"]
                </a>
            }
        </div>
        <div class="dropdown-divider"></div>

        @if (Model.Notifications.Any())
        {
            @foreach (var notification in Model.Notifications)
            {
                <a href="@(notification.ActionUrl ?? "#")" class="dropdown-item py-2 @(!notification.IsRead ? "bg-light" : "")">
                    <div class="d-flex gap-2">
                        <div class="flex-shrink-0">
                            <span class="badge bg-@notification.Type bg-opacity-10 text-@notification.Type p-2 rounded">
                                <i class="bi @notification.Icon"></i>
                            </span>
                        </div>
                        <div class="flex-grow-1">
                            <div class="fw-semibold small">@notification.Title</div>
                            <div class="text-muted small text-truncate" style="max-width: 250px;">@notification.Message</div>
                            <div class="text-muted small mt-1">
                                <i class="bi bi-clock me-1"></i>
                                @GetRelativeTime(notification.CreatedAt)
                            </div>
                        </div>
                        @if (!notification.IsRead)
                        {
                            <div class="flex-shrink-0">
                                <span class="badge bg-primary rounded-pill" style="width: 8px; height: 8px;"></span>
                            </div>
                        }
                    </div>
                </a>
            }
        }
        else
        {
            <div class="dropdown-item text-center text-muted py-4">
                <i class="bi bi-bell-slash fs-3 d-block mb-2"></i>
                @Localizer["Notification_NoNotifications"]
            </div>
        }

        <div class="dropdown-divider"></div>
        <a href="/notifications" class="dropdown-item text-center text-primary small">
            @Localizer["Notification_ViewAll"]
            <i class="bi bi-arrow-right ms-1"></i>
        </a>
    </div>
</div>

@functions {
    string GetRelativeTime(DateTime date)
    {
        var diff = DateTime.UtcNow - date;
        if (diff.TotalMinutes < 60)
            return Localizer["MinutesAgo", (int)diff.TotalMinutes].Value;
        if (diff.TotalHours < 24)
            return Localizer["HoursAgo", (int)diff.TotalHours].Value;
        return Localizer["DaysAgo", (int)diff.TotalDays].Value;
    }
}
