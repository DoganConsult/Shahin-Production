@model List<GrcMvc.ViewComponents.ActivityItem>

<div class="grc-activity-feed">
    @if (Model.Any())
    {
        <div class="list-group list-group-flush">
            @foreach (var activity in Model)
            {
                <div class="list-group-item px-0 py-3 border-0">
                    <div class="d-flex gap-3">
                        <div class="flex-shrink-0">
                            @if (!string.IsNullOrEmpty(activity.UserAvatar))
                            {
                                <img src="@activity.UserAvatar" alt="@activity.User" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-semibold"
                                     style="width: 40px; height: 40px; background-color: @GetAvatarColor(activity.User);">
                                    @GetInitials(activity.User)
                                </div>
                            }
                        </div>
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <span class="fw-semibold">@activity.User</span>
                                    <span class="text-muted">@Localizer[$"Action_{activity.Action}"]</span>
                                    <span class="badge bg-@activity.Color bg-opacity-10 text-@activity.Color">
                                        <i class="bi @activity.Icon me-1"></i>@activity.EntityType
                                    </span>
                                </div>
                                <small class="text-muted">@GetRelativeTime(activity.Timestamp)</small>
                            </div>
                            <div class="mt-1">
                                @if (!string.IsNullOrEmpty(activity.EntityUrl))
                                {
                                    <a href="@activity.EntityUrl" class="text-decoration-none fw-medium">@activity.EntityName</a>
                                }
                                else
                                {
                                    <span class="fw-medium">@activity.EntityName</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center text-muted py-4">
            <i class="bi bi-activity fs-1 d-block mb-2"></i>
            @Localizer["Activity_NoRecentActivities"]
        </div>
    }
</div>

@functions {
    string GetInitials(string name)
    {
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
        return name.Substring(0, Math.Min(2, name.Length)).ToUpper();
    }

    string GetAvatarColor(string name)
    {
        var colors = new[] { "#6366f1", "#8b5cf6", "#ec4899", "#f43f5e", "#f97316", "#22c55e", "#14b8a6", "#3b82f6" };
        return colors[Math.Abs(name.GetHashCode()) % colors.Length];
    }

    string GetRelativeTime(DateTime date)
    {
        var diff = DateTime.UtcNow - date;
        if (diff.TotalMinutes < 60)
            return Localizer["MinutesAgo", (int)diff.TotalMinutes].Value;
        if (diff.TotalHours < 24)
            return Localizer["HoursAgo", (int)diff.TotalHours].Value;
        return Localizer["DaysAgo", (int)diff.TotalDays].Value;
    }
}
