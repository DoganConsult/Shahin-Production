<style>
    #copilot-panel {
        animation: slideUp 0.2s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .copilot-user-message {
        background: linear-gradient(135deg, #059669 0%, #10b981 100%);
    }

    .copilot-ai-message {
        background: #f1f5f9;
    }

    .dark .copilot-ai-message {
        background: #334155;
    }
</style>

<script>
(function() {
    const toggle = document.getElementById('copilot-toggle');
    const panel = document.getElementById('copilot-panel');
    const close = document.getElementById('copilot-close');
    const input = document.getElementById('copilot-input');
    const send = document.getElementById('copilot-send');
    const messages = document.getElementById('copilot-messages');
    const loading = document.getElementById('copilot-loading');

    let conversationHistory = [];
    let isProcessing = false;

    // Toggle panel
    toggle.addEventListener('click', () => {
        panel.classList.toggle('hidden');
        if (!panel.classList.contains('hidden')) {
            input.focus();
        }
    });

    // Close panel
    close.addEventListener('click', () => {
        panel.classList.add('hidden');
    });

    // Send message
    async function sendMessage() {
        const text = input.value.trim();
        if (!text || isProcessing) return;

        isProcessing = true;
        send.disabled = true;
        input.disabled = true;

        // Add user message to UI
        addMessage(text, 'user');
        input.value = '';

        // Show loading
        loading.classList.remove('hidden');

        try {
            // Call API
            const response = await fetch('/api/copilot/chat', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify({
                    message: text,
                    conversationHistory: conversationHistory
                })
            });

            const data = await response.json();

            if (data.success) {
                addMessage(data.response, 'ai', data.suggestedActions);
                conversationHistory.push({ role: 'user', content: text });
                conversationHistory.push({ role: 'assistant', content: data.response });

                // Keep history limited to last 10 messages
                if (conversationHistory.length > 20) {
                    conversationHistory = conversationHistory.slice(-20);
                }
            } else {
                addMessage('I apologize, but I encountered an issue. Please try again or contact support if the problem persists.', 'ai');
            }
        } catch (error) {
            console.error('Copilot error:', error);
            addMessage('Unable to connect to the AI service. Please check your connection and try again.', 'ai');
        } finally {
            loading.classList.add('hidden');
            isProcessing = false;
            send.disabled = false;
            input.disabled = false;
            input.focus();
        }
    }

    function addMessage(text, type, suggestedActions = null) {
        const messageDiv = document.createElement('div');
        messageDiv.className = 'flex gap-2 ' + (type === 'user' ? 'justify-end' : '');

        if (type === 'user') {
            messageDiv.innerHTML = `
                <div class="copilot-user-message text-white p-3 rounded-lg rounded-tr-none max-w-[280px]">
                    <p class="text-sm">${escapeHtml(text)}</p>
                </div>
                <div class="w-8 h-8 rounded-full bg-emerald-600 flex items-center justify-center flex-shrink-0 text-white text-sm font-medium">
                    üë§
                </div>
            `;
        } else {
            let actionsHtml = '';
            if (suggestedActions && suggestedActions.length > 0) {
                actionsHtml = `
                    <div class="mt-2 pt-2 border-t border-slate-200 dark:border-slate-600">
                        <p class="text-xs text-slate-500 mb-1">Suggested actions:</p>
                        <div class="flex flex-wrap gap-1">
                            ${suggestedActions.map(action =>
                                `<button onclick="askCopilot('${escapeHtml(action)}')" class="text-xs px-2 py-1 bg-emerald-50 dark:bg-emerald-900 text-emerald-700 dark:text-emerald-300 rounded hover:bg-emerald-100 dark:hover:bg-emerald-800 transition-colors">${escapeHtml(action)}</button>`
                            ).join('')}
                        </div>
                    </div>
                `;
            }

            messageDiv.innerHTML = `
                <div class="w-8 h-8 rounded-full bg-emerald-100 dark:bg-emerald-900 flex items-center justify-center flex-shrink-0">
                    ü¶Ö
                </div>
                <div class="copilot-ai-message dark:text-slate-200 p-3 rounded-lg rounded-tl-none max-w-[280px]">
                    <p class="text-sm whitespace-pre-wrap">${formatResponse(text)}</p>
                    ${actionsHtml}
                </div>
            `;
        }

        messages.appendChild(messageDiv);
        messages.scrollTop = messages.scrollHeight;
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    function formatResponse(text) {
        // Convert markdown-like formatting
        return escapeHtml(text)
            .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
            .replace(/\*(.*?)\*/g, '<em>$1</em>')
            .replace(/`(.*?)`/g, '<code class="bg-slate-200 dark:bg-slate-600 px-1 rounded text-xs">$1</code>')
            .replace(/\n/g, '<br>');
    }

    // Event listeners
    send.addEventListener('click', sendMessage);
    input.addEventListener('keypress', (e) => {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            sendMessage();
        }
    });

    // Global function for quick action buttons
    window.askCopilot = function(question) {
        input.value = question;
        sendMessage();
    };

    // Keyboard shortcut to toggle (Ctrl+Shift+A)
    document.addEventListener('keydown', (e) => {
        if (e.ctrlKey && e.shiftKey && e.key === 'A') {
            e.preventDefault();
            toggle.click();
        }
    });
})();
</script>
