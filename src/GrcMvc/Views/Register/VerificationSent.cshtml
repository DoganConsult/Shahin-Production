@model GrcMvc.Controllers.VerificationSentViewModel
@{
    ViewData["Title"] = "Verify Your Email";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 text-center">
            <!-- Email Icon -->
            <div class="mb-4">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                    <i class="bi bi-envelope-check text-primary" style="font-size: 3rem;"></i>
                </div>
            </div>

            <!-- Message -->
            <h1 class="h2 mb-3">Check Your Email</h1>
            <p class="lead text-muted mb-4">
                We've sent a verification link to <strong>@Model.Email</strong>
            </p>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                </div>
            }

            <!-- Instructions Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">What to do next</h5>
                    <div class="text-start">
                        <div class="d-flex align-items-start mb-3">
                            <span class="badge bg-primary rounded-circle me-3">1</span>
                            <div>
                                <strong>Open your email</strong>
                                <p class="text-muted small mb-0">Look for an email from Shahin GRC</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-start mb-3">
                            <span class="badge bg-primary rounded-circle me-3">2</span>
                            <div>
                                <strong>Click the verification link</strong>
                                <p class="text-muted small mb-0">This will open a page to set your password</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-start">
                            <span class="badge bg-primary rounded-circle me-3">3</span>
                            <div>
                                <strong>Set your password and start</strong>
                                <p class="text-muted small mb-0">You'll be redirected to the onboarding wizard</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Timer Info -->
            <div class="alert alert-info">
                <i class="bi bi-clock me-2"></i>
                <strong>Link expires in 24 hours</strong>
                <p class="mb-0 small">Check your spam folder if you don't see the email.</p>
            </div>

            <!-- Resend Option -->
            @if (Model.CanResend)
            {
                <div class="mt-4">
                    <p class="text-muted mb-2">Didn't receive the email?</p>
                    <form asp-controller="Register" asp-action="ResendVerification" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="tenantId" value="@Model.TenantId" />
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-clockwise me-2"></i> Resend Verification Email
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="mt-4">
                    <p class="text-muted small">
                        <i class="bi bi-info-circle me-1"></i>
                        Please wait before requesting another email.
                    </p>
                </div>
            }

            <!-- Support -->
            <div class="mt-4">
                <p class="text-muted small">
                    Need help? Contact us at
                    <a href="mailto:support@shahin-ai.com">support@shahin-ai.com</a>
                </p>
            </div>
        </div>
    </div>
</div>
