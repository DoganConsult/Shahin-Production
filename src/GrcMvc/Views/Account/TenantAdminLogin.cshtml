@model GrcMvc.Models.ViewModels.TenantAdminLoginViewModel
@{
    ViewData["Title"] = "Tenant Admin Login";
    Layout = "_Layout";
}

<div class="auth-form">
    <div class="card">
        <div class="card-header text-center">
            <h4><i class="bi bi-shield-lock"></i> Tenant Admin Login</h4>
            <p class="text-muted small mb-0">Enter your Tenant ID, Username, and Password to access onboarding</p>
        </div>
        <div class="card-body">
            <form asp-action="TenantAdminLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="TenantId" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-building"></i></span>
                        <input asp-for="TenantId" class="form-control" placeholder="00000000-0000-0000-0000-000000000000" autofocus />
                    </div>
                    <span asp-validation-for="TenantId" class="text-danger"></span>
                    <small class="form-text text-muted">
                        Your Tenant ID was provided when your account was created.
                        <a asp-action="ForgotTenantId" class="text-decoration-none">Forgot your Tenant ID?</a>
                    </small>
                </div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="admin-tenant-slug" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <strong>Note:</strong> These credentials are temporary and may expire. 
                    If your credentials have expired, please contact the system owner.
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Login to Onboarding
                    </button>
                </div>

                <hr />

                <div class="text-center">
                    <a asp-action="Login" class="text-decoration-none">
                        <i class="bi bi-arrow-left"></i> Back to Regular Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
