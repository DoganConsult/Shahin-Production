@model GrcMvc.Models.ViewModels.Disable2faViewModel
@{
    ViewData["Title"] = "Disable Two-Factor Authentication";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-shield-x"></i> Disable 2FA</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <h6><i class="bi bi-exclamation-triangle"></i> Warning</h6>
                        <p class="mb-0">
                            Disabling two-factor authentication will make your account less secure. 
                            You will only need your password to sign in.
                        </p>
                    </div>

                    <form asp-action="Disable2fa" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">
                                <span class="text-danger">*</span> Confirm Your Password
                            </label>
                            <input asp-for="Password" type="password" class="form-control" required autofocus>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="text-muted">Enter your password to confirm this action</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-shield-x"></i> Disable Two-Factor Authentication
                            </button>
                            <a href="@Url.Action("Index", "Security")" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
