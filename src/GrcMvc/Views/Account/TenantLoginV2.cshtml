@model GrcMvc.Controllers.TenantLoginViewModel
@{
    ViewData["Title"] = "Tenant Login (V2 - Session-Based Claims)";
    Layout = "_Layout";
    var version = ViewData["Version"] as string;
    var tenantSlug = ViewData["TenantSlug"] as string;
}

<div class="auth-form">
    <div class="card">
        <div class="card-header text-center bg-primary text-white">
            <h4><i class="bi bi-building"></i> Tenant Login - Enhanced</h4>
            @if (!string.IsNullOrEmpty(version))
            {
                <small class="badge bg-light text-dark">@version</small>
            }
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="bi bi-shield-check"></i>
                <strong>Enhanced Security:</strong> This login uses session-based tenant claims (not persisted to database).
            </div>
            
            @if (!string.IsNullOrEmpty(tenantSlug))
            {
                <div class="alert alert-success">
                    <strong>Tenant:</strong> @tenantSlug
                </div>
            }
            
            <form asp-action="TenantLogin" asp-controller="AccountV2" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="email@example.com" autofocus required />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TenantId" class="form-label">Tenant ID</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-building"></i></span>
                        <input asp-for="TenantId" class="form-control" placeholder="00000000-0000-0000-0000-000000000000" required />
                    </div>
                    <span asp-validation-for="TenantId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TenantSlug" class="form-label">Tenant Slug (Optional)</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-tag"></i></span>
                        <input asp-for="TenantSlug" class="form-control" placeholder="tenant-slug" value="@tenantSlug" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label">Role (Optional)</label>
                    <select asp-for="Role" class="form-select">
                        <option value="">-- Select Role --</option>
                        <option value="TenantAdmin">Tenant Admin</option>
                        <option value="TenantUser">Tenant User</option>
                        <option value="ComplianceOfficer">Compliance Officer</option>
                        <option value="RiskManager">Risk Manager</option>
                        <option value="Auditor">Auditor</option>
                    </select>
                </div>

                <input type="hidden" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Login to Tenant (Enhanced)
                    </button>
                </div>

                <hr />

                <div class="text-center">
                    <p>
                        <a asp-action="Login" asp-controller="AccountV2">Regular Login</a> |
                        <a asp-action="ForgotPassword" asp-controller="Account">Forgot Password?</a>
                    </p>
                </div>
            </form>
            
            <div class="mt-3">
                <h6>V2 Session-Based Claims:</h6>
                <ul class="small">
                    <li><i class="bi bi-check-circle text-success"></i> Tenant context stored in session (NOT database)</li>
                    <li><i class="bi bi-check-circle text-success"></i> Fixes bug: Claims no longer persist to AspNetUserClaims table</li>
                    <li><i class="bi bi-check-circle text-success"></i> Faster tenant switching</li>
                    <li><i class="bi bi-check-circle text-success"></i> No database overhead for tenant context</li>
                </ul>
                <a href="/account/tenant-login" class="btn btn-sm btn-link">Switch to Legacy Tenant Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
