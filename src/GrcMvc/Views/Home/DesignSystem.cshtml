                }
            }' />

            <partial name="Components/_ShahinDropdown" model='new {
                Id = "exportDropdown",
                ButtonText = "Export",
                ButtonType = "success",
                ButtonIcon = "download",
                Direction = "up",
                Items = new[] {
                    new { Text = "Export as PDF", Icon = "file-pdf", Url = "#pdf", Divider = false },
                    new { Text = "Export as Excel", Icon = "file-excel", Url = "#excel", Divider = false },
                    new { Text = "Export as CSV", Icon = "file-text", Url = "#csv", Divider = false }
                }
            }' />

            <partial name="Components/_ShahinDropdown" model='new {
                Id = "splitDropdown",
                ButtonText = "Split Button",
                ButtonType = "secondary",
