                    new { Text = "Option 3", Icon = "3-circle", Url = "#3", Divider = false }
                }
            }' />
        </div>

        <!-- Pagination -->
        <h3 class="shahin-text-xl shahin-font-semibold mb-3 mt-5">Pagination</h3>
        <partial name="Components/_ShahinPagination" model='new {
            CurrentPage = 5,
            TotalPages = 12,
            BaseUrl = "/Risk/Index",
            ShowFirstLast = true,
            MaxVisible = 7
        }' />

        <!-- Tooltip -->
