@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<GrcMvc.Resources.SharedResource> L
@{
    ViewData["Title"] = "Design System Showcase";
}

<div class="container-fluid py-5">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Shahin AI Design System</h1>
        <p class="page-subtitle">Complete component library showcase with RTL support</p>
    </div>

    <!-- Section: Buttons -->
    <section class="mb-5">
        <h2 class="shahin-text-2xl shahin-font-bold shahin-mb-4">Buttons</h2>
        <div class="shahin-card">
            <div class="shahin-card-header">
                <h3 class="shahin-card-title">Button Variants</h3>
            </div>
            <div class="shahin-card-body">
                <div class="shahin-flex shahin-gap-4 flex-wrap mb-4">
                    <partial name="Components/_ShahinButton" model='new { Text = "Primary", Type = "primary", Icon = "check-circle" }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Secondary", Type = "secondary", Icon = "gear" }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Success", Type = "success", Icon = "check" }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Danger", Type = "danger", Icon = "x-circle" }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Ghost", Type = "ghost", Icon = "eye" }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Outline", Type = "outline", Icon = "download" }' />
                </div>

                <h4 class="shahin-font-semibold mb-3">Button Sizes</h4>
                <div class="shahin-flex shahin-gap-4 shahin-items-center flex-wrap mb-4">
                    <partial name="Components/_ShahinButton" model='new { Text = "Extra Small", Type = "primary", Size = "xs" }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Small", Type = "primary", Size = "sm" }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Medium (Default)", Type = "primary" }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Large", Type = "primary", Size = "lg" }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Extra Large", Type = "primary", Size = "xl" }' />
                </div>

                <h4 class="shahin-font-semibold mb-3">Button States</h4>
                <div class="shahin-flex shahin-gap-4 flex-wrap">
                    <partial name="Components/_ShahinButton" model='new { Text = "Normal", Type = "primary" }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Disabled", Type = "primary", Disabled = true }' />
                    <partial name="Components/_ShahinButton" model='new { Text = "Block Button", Type = "success", IsBlock = true }' />
                </div>
            </div>
        </div>
    </section>

    <!-- Section: Alerts -->
    <section class="mb-5">
        <h2 class="shahin-text-2xl shahin-font-bold shahin-mb-4">Alerts</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <partial name="Components/_ShahinAlert" model='new {
                    Type = "success",
                    Title = "Success!",
                    Message = "Your risk assessment has been saved successfully.",
                    ShowIcon = true
                }' />
            </div>
            <div class="col-md-6">
                <partial name="Components/_ShahinAlert" model='new {
                    Type = "warning",
                    Title = "Warning",
                    Message = "This compliance framework requires immediate attention.",
                    ShowIcon = true
                }' />
            </div>
            <div class="col-md-6">
                <partial name="Components/_ShahinAlert" model='new {
                    Type = "error",
                    Title = "Error",
                    Message = "Failed to submit the audit report. Please try again.",
                    ShowIcon = true
                }' />
            </div>
            <div class="col-md-6">
                <partial name="Components/_ShahinAlert" model='new {
                    Type = "info",
                    Title = "Information",
                    Message = "New compliance regulations are available for review.",
                    ShowIcon = true
                }' />
            </div>
        </div>
    </section>

    <!-- Section: Badges -->
    <section class="mb-5">
        <h2 class="shahin-text-2xl shahin-font-bold shahin-mb-4">Badges</h2>
        <div class="shahin-card">
            <div class="shahin-card-body">
                <div class="shahin-flex shahin-gap-4 flex-wrap">
                    <partial name="Components/_ShahinBadge" model='new { Text = "Active", Type = "success" }' />
                    <partial name="Components/_ShahinBadge" model='new { Text = "Pending", Type = "warning" }' />
                    <partial name="Components/_ShahinBadge" model='new { Text = "Critical", Type = "danger" }' />
                    <partial name="Components/_ShahinBadge" model='new { Text = "New", Type = "primary" }' />
                    <partial name="Components/_ShahinBadge" model='new { Text = "Info", Type = "info" }' />
                    <partial name="Components/_ShahinBadge" model='new { Text = "Inactive", Type = "neutral" }' />
                </div>
            </div>
        </div>
    </section>

    <!-- Section: Cards -->
    <section class="mb-5">
        <h2 class="shahin-text-2xl shahin-font-bold shahin-mb-4">Cards</h2>
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <partial name="Components/_ShahinCard" model='new {
                    Title = "Default Card",
                    Subtitle = "Standard card variant",
                    Body = Html.Raw("<p>This is the default card variant with standard shadow and border.</p>"),
                    Footer = Html.Raw("<button class=\"shahin-btn shahin-btn-primary shahin-btn-sm\">View Details</button>")
                }' />
            </div>
            <div class="col-md-6 col-lg-3">
                <partial name="Components/_ShahinCard" model='new {
                    Title = "Elevated Card",
                    Subtitle = "Higher elevation",
                    Body = Html.Raw("<p>This card has elevated shadow for emphasis.</p>"),
                    Variant = "elevated"
                }' />
            </div>
            <div class="col-md-6 col-lg-3">
                <partial name="Components/_ShahinCard" model='new {
                    Title = "Flat Card",
                    Subtitle = "Minimal style",
                    Body = Html.Raw("<p>This card has no shadow, only border.</p>"),
                    Variant = "flat"
                }' />
            </div>
            <div class="col-md-6 col-lg-3">
                <partial name="Components/_ShahinCard" model='new {
                    Title = "Interactive Card",
                    Subtitle = "Clickable card",
                    Body = Html.Raw("<p>This card responds to hover with animation.</p>"),
                    Variant = "interactive"
                }' />
            </div>
        </div>
    </section>

    <!-- Section: Form Components -->
    <section class="mb-5">
        <h2 class="shahin-text-2xl shahin-font-bold shahin-mb-4">Form Components</h2>
        <div class="shahin-card">
            <div class="shahin-card-header">
                <h3 class="shahin-card-title">Form Elements</h3>
            </div>
            <div class="shahin-card-body">
                <div class="row">
                    <div class="col-md-6">
                        <partial name="Components/_ShahinFormGroup" model='new {
                            Label = "Email Address",
                            Name = "email",
                            Type = "email",
                            Placeholder = "Enter your email",
                            Required = true,
                            HelpText = "We will never share your email."
                        }' />
                    </div>
                    <div class="col-md-6">
                        <partial name="Components/_ShahinFormGroup" model='new {
                            Label = "Password",
                            Name = "password",
                            Type = "password",
                            Placeholder = "Enter password",
                            Required = true
                        }' />
                    </div>
                    <div class="col-12">
                        <partial name="Components/_ShahinFormGroup" model='new {
                            Label = "Description",
                            Name = "description",
                            Type = "text",
                            Placeholder = "Enter risk description",
                            Required = false,
                            HelpText = "Provide detailed information about the risk."
                        }' />
                    </div>
                    <div class="col-md-6">
                        <partial name="Components/_ShahinFormGroup" model='new {
                            Label = "Risk Level",
                            Name = "riskLevel",
                            Type = "text",
                            Value = "",
                            Required = true
                        }' />
                    </div>
                    <div class="col-md-6">
                        <partial name="Components/_ShahinFormGroup" model='new {
                            Label = "Invalid Field",
                            Name = "invalidField",
                            Type = "text",
                            Value = "invalid@value",
                            Error = "This field contains an invalid value"
                        }' />
