@using Microsoft.AspNetCore.Localization
@using GrcMvc.Data
@using Microsoft.EntityFrameworkCore
@inject GrcMvc.Services.Interfaces.ICurrentUserService CurrentUserService
@inject GrcDbContext DbContext
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var isArabic = requestCulture?.RequestCulture?.UICulture?.Name == "ar";
    ViewData["Title"] = Localizer["Onboarding_Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Check authentication status
    var isAuthenticated = User.Identity?.IsAuthenticated == true;

    // Get current user's tenant ID (only if authenticated)
    var tenantId = Guid.Empty;
    var hasTenant = false;
    if (isAuthenticated)
    {
        try
        {
            tenantId = CurrentUserService.GetTenantId();
            hasTenant = tenantId != Guid.Empty;
        }
        catch { }
    }

    // Get wizard progress from database (only if user has a tenant)
    var completedSections = new List<string>();
    var progressPercent = 0;
    if (hasTenant)
    {
        try
        {
            var wizard = await DbContext.OnboardingWizards.FirstOrDefaultAsync(w => w.TenantId == tenantId);
            if (wizard != null)
            {
                progressPercent = wizard.ProgressPercent;
                if (!string.IsNullOrEmpty(wizard.CompletedSectionsJson))
                {
                    try { completedSections = System.Text.Json.JsonSerializer.Deserialize<List<string>>(wizard.CompletedSectionsJson) ?? new(); } catch { }
                }
            }
        }
        catch { }
    }
}

<div class="container-fluid py-5 bg-light">
    <div class="container">
        <div class="row">
            <!-- Sidebar - 12 Wizard Steps -->
            <div class="col-md-3">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-body p-3">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-list-check text-primary me-2"></i>@Localizer["Onboarding_12StepWizard"]
                        </h5>

                        <div class="progress mb-3" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @progressPercent%">@progressPercent%</div>
                        </div>

                        <div class="list-group list-group-flush small">
                            @{
                                var steps = new[] {
                                    ("A", "building", "primary", "Organization Identity"),
                                    ("B", "bullseye", "info", "Assurance Objective"),
                                    ("C", "bank", "warning", "Regulatory Frameworks"),
                                    ("D", "diagram-3", "success", "Scope Definition"),
                                    ("E", "shield-exclamation", "danger", "Data & Risk Profile"),
                                    ("F", "cpu", "secondary", "Technology Landscape"),
                                    ("G", "person-badge", "primary", "Control Ownership"),
                                    ("H", "people", "info", "Teams & Roles"),
                                    ("I", "calendar-check", "warning", "Workflow Cadence"),
                                    ("J", "file-earmark-check", "success", "Evidence Standards"),
                                    ("K", "layers", "danger", "Baseline & Overlays"),
                                    ("L", "rocket-takeoff", "primary", "Go-Live & Metrics")
                                };
                            }
                            @foreach (var (letter, icon, color, name) in steps)
                            {
                                var isCompleted = completedSections.Contains(letter);
                                var statusIcon = isCompleted ? "check-circle-fill text-success" : $"{icon} text-{color}";
                                var bgClass = isCompleted ? "list-group-item-success" : "";
                                @if (hasTenant)
                                {
                                    <a href="/OnboardingWizard/Step@(letter)/@tenantId" class="list-group-item list-group-item-action py-2 @bgClass">
                                        <i class="bi bi-@statusIcon me-2"></i>
                                        <strong>@letter.</strong> @name
                                        @if (isCompleted)
                                        {
                                            <i class="bi bi-check text-success float-end"></i>
                                        }
                                    </a>
                                }
                                else
                                {
                                    <div class="list-group-item py-2 text-muted">
                                        <i class="bi bi-@statusIcon me-2"></i>
                                        <strong>@letter.</strong> @name
                                    </div>
                                }
                            }
                        </div>

                        <div class="mt-3 pt-2 border-top">
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i> @Localizer["Onboarding_EstTime"]
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <h1 class="mb-4">@Localizer["Onboarding_WelcomeTitle"]</h1>

                        <div class="alert alert-info border-0" role="alert">
                            <i class="bi bi-info-circle"></i>
                            <strong class="ms-2">@Localizer["Onboarding_CompleteSetup"]</strong> @Localizer["Onboarding_SetupDescription"]
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <h5 class="mb-3"><i class="bi bi-check2-square text-success me-2"></i>@Localizer["Onboarding_WhatYouConfigure"]</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success"></i>
                                        <span class="ms-2"><strong>أ-ج:</strong> هوية المؤسسة والأهداف والجهات التنظيمية</span>
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success"></i>
                                        <span class="ms-2"><strong>د-و:</strong> النطاق وملف البيانات والبنية التقنية</span>
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success"></i>
                                        <span class="ms-2"><strong>ز-ط:</strong> ملكية الضوابط والفرق وسير العمل</span>
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success"></i>
                                        <span class="ms-2"><strong>ي-ل:</strong> معايير الأدلة والخطوط الأساسية والانطلاق</span>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <h6><i class="bi bi-magic text-primary me-2"></i><strong>@Localizer["Onboarding_AutoDerivedOutputs"]</strong></h6>
                                        <ul class="text-muted small mt-2 mb-0">
                                            <li><i class="bi bi-check text-success"></i> الأُطر التنظيمية المطبقة (NCA, SAMA, PDPL)</li>
                                            <li><i class="bi bi-check text-success"></i> الخطوط الأساسية والإضافات للضوابط</li>
                                            <li><i class="bi bi-check text-success"></i> قوالب التقييم</li>
                                            <li><i class="bi bi-check text-success"></i> الفرق ومصفوفة RACI</li>
                                            <li><i class="bi bi-check text-success"></i> جداول جمع الأدلة</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-5 text-center">
                            @if (!isAuthenticated)
                            {
                                <!-- Not logged in - register first -->
                                <a href="/Account/Register" class="btn btn-primary btn-lg px-5 py-3">
                                    <i class="bi bi-person-plus me-2"></i> @Localizer["Onboarding_RegisterFirst"]
                                </a>
                                <p class="text-muted mt-3">
                                    @Localizer["Onboarding_HaveAccount"] <a href="/Account/Login">@Localizer["Login"]</a>
                                </p>
                            }
                            else if (!hasTenant)
                            {
                                <!-- Logged in but no tenant - create organization -->
                                <a href="/Onboarding/Signup" class="btn btn-success btn-lg px-5 py-3">
                                    <i class="bi bi-building-add me-2"></i> @Localizer["Onboarding_CreateOrg"]
                                </a>
                                <p class="text-muted mt-3 small">
                                    <i class="bi bi-info-circle me-1"></i> @Localizer["Onboarding_WorkspaceCreated"]
                                </p>
                            }
                            else
                            {
                                <!-- Has tenant - start wizard -->
                                <a href="/OnboardingWizard/StepA/@tenantId" class="btn btn-success btn-lg px-5 py-3" id="btn-start-wizard">
                                    <i class="bi bi-rocket-takeoff me-2"></i> @Localizer["Onboarding_StartSetup"]
                                </a>
                                <p class="text-muted mt-3 small">
                                    <i class="bi bi-clock me-1"></i> @Localizer["Onboarding_12Steps15Min"]
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Disable form submit links in sidebar for incomplete steps
            document.querySelectorAll('.list-group-item.disabled').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                });
            });
        });
    </script>
}
