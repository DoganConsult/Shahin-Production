@model GrcMvc.Models.Entities.Tenant
@{
    ViewData["Title"] = $"Tenant: {Model.OrganizationName}";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Tenants</a></li>
                    <li class="breadcrumb-item active">@Model.OrganizationName</li>
                </ol>
            </nav>
            <h2>@Model.OrganizationName</h2>
            <p class="text-muted">
                <code>@(Model.TenantSlug).shahin-ai.com</code> |
                Created: @Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")
            </p>
        </div>
        <div class="col text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Status & Actions -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle"></i> Status
                </div>
                <div class="card-body text-center">
                    @if (Model.Status == "Active")
                    {
                        <span class="badge bg-success fs-5 mb-3">Active</span>
                    }
                    else if (Model.Status == "Pending")
                    {
                        <span class="badge bg-warning text-dark fs-5 mb-3">Pending Activation</span>
                    }
                    else if (Model.Status == "Suspended")
                    {
                        <span class="badge bg-danger fs-5 mb-3">Suspended</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary fs-5 mb-3">@Model.Status</span>
                    }

                    <div class="d-grid gap-2">
                        @if (Model.Status != "Active")
                        {
                            <form asp-action="Activate" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle"></i> Activate Tenant
                                </button>
                            </form>
                        }
                        @if (Model.Status == "Active")
                        {
                            <form asp-action="Suspend" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to suspend this tenant?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-pause-circle"></i> Suspend Tenant
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-credit-card"></i> Subscription
                </div>
                <div class="card-body">
                    <h4 class="text-center">
                        <span class="badge bg-info">@Model.SubscriptionTier</span>
                    </h4>
                    @if (Model.ActivatedAt.HasValue)
                    {
                        <p class="text-muted text-center mb-0">
                            Activated: @Model.ActivatedAt.Value.ToString("yyyy-MM-dd")
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Stats -->
        <div class="col-md-8">
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="text-primary">@ViewBag.UserCount</h3>
                            <small class="text-muted">Total Users</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="text-success">@ViewBag.ActiveUserCount</h3>
                            <small class="text-muted">Active Users</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="text-info">@ViewBag.AssessmentCount</h3>
                            <small class="text-muted">Assessments</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="text-warning">@ViewBag.RiskCount</h3>
                            <small class="text-muted">Risks</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tenant Details -->
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-building"></i> Tenant Details
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th style="width: 200px;">Tenant ID</th>
                            <td><code>@Model.Id</code></td>
                        </tr>
                        <tr>
                            <th>Slug</th>
                            <td><code>@Model.TenantSlug</code></td>
                        </tr>
                        <tr>
                            <th>Organization</th>
                            <td>@Model.OrganizationName</td>
                        </tr>
                        <tr>
                            <th>Subdomain URL</th>
                            <td>
                                <a href="https://@(Model.TenantSlug).shahin-ai.com" target="_blank" class="text-decoration-none">
                                    https://@(Model.TenantSlug).shahin-ai.com
                                    <i class="bi bi-box-arrow-up-right"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Created</th>
                            <td>@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                        @if (Model.ActivatedAt.HasValue)
                        {
                            <tr>
                                <th>Activated</th>
                                <td>@Model.ActivatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            </tr>
                        }
                        <tr>
                            <th>Last Modified</th>
                            <td>@Model.ModifiedDate?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
