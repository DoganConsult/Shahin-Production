@model GrcMvc.Controllers.CreateTenantViewModel
@{
    ViewData["Title"] = "Create Tenant";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-building-add"></i> Create New Tenant</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="OrganizationName" class="form-label">Organization Name <span class="text-danger">*</span></label>
                            <input asp-for="OrganizationName" class="form-control" placeholder="e.g., Acme Corporation" required />
                            <span asp-validation-for="OrganizationName" class="text-danger"></span>
                            <div class="form-text">The official name of the organization</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdminEmail" class="form-label">Admin Email <span class="text-danger">*</span></label>
                            <input asp-for="AdminEmail" type="email" class="form-control" placeholder="admin@acme.com" required />
                            <span asp-validation-for="AdminEmail" class="text-danger"></span>
                            <div class="form-text">The tenant admin will receive activation link at this email</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TenantSlug" class="form-label">Tenant Slug (Optional)</label>
                            <div class="input-group">
                                <input asp-for="TenantSlug" class="form-control" placeholder="acme" />
                                <span class="input-group-text">.shahin-ai.com</span>
                            </div>
                            <span asp-validation-for="TenantSlug" class="text-danger"></span>
                            <div class="form-text">Leave empty to auto-generate from organization name. Used for subdomain access.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SubscriptionTier" class="form-label">Subscription Tier</label>
                            <select asp-for="SubscriptionTier" class="form-select">
                                <option value="Trial">Trial (14 days)</option>
                                <option value="Starter" selected>Starter</option>
                                <option value="Professional">Professional</option>
                                <option value="Enterprise">Enterprise</option>
                                <option value="Government">Government</option>
                            </select>
                            <div class="form-text">Select the subscription tier for this tenant</div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Tenant
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card mt-4">
                <div class="card-header">
                    <i class="bi bi-info-circle"></i> What happens next?
                </div>
                <div class="card-body">
                    <ol class="mb-0">
                        <li>Tenant record is created in the database</li>
                        <li>Activation email is sent to the admin email</li>
                        <li>Admin clicks activation link to set password</li>
                        <li>Tenant becomes Active and accessible</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
