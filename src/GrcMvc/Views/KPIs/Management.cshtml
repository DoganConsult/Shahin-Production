@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Services.Interfaces.GrcKpisDto
@{
    ViewData["Title"] = "KPI Management";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-clipboard-data"></i> KPI Management</h2>
            <p class="text-muted">GRC Key Performance Indicators overview and management</p>
        </div>
        <div class="col text-end">
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a asp-action="Thresholds" class="btn btn-primary">
                <i class="bi bi-sliders"></i> Configure Thresholds
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        @{
            var kpiItems = new[] {
                ("Compliance Rate", Model.ComplianceRate, "bi-shield-check", "primary"),
                ("Risk Mitigation", Model.RiskMitigationRate, "bi-exclamation-triangle", "warning"),
                ("Control Effectiveness", Model.ControlEffectiveness, "bi-gear-wide-connected", "success"),
                ("Policy Compliance", Model.PolicyCompliance, "bi-file-text", "info")
            };
        }
        @foreach (var (name, value, icon, color) in kpiItems)
        {
            var statusColor = value >= 80 ? "success" : value >= 60 ? "warning" : "danger";
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi @icon fs-1 text-@color opacity-50"></i>
                        <h2 class="mt-2 text-@statusColor">@value.ToString("F0")%</h2>
                        <p class="text-muted mb-0">@name</p>
                        <div class="progress mt-2" style="height: 8px;">
                            <div class="progress-bar bg-@statusColor" style="width: @value%"></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Detailed KPIs Table -->
    <div class="card shadow-sm">
        <div class="card-header">
            <i class="bi bi-table"></i> All KPIs
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>KPI</th>
                            <th>Current Value</th>
                            <th>Status</th>
                            <th>Trend</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var allKpis = new (string Name, decimal Value, string Icon)[] {
                                ("Compliance Rate", Model.ComplianceRate, "bi-shield-check"),
                                ("Risk Mitigation Rate", Model.RiskMitigationRate, "bi-exclamation-triangle"),
                                ("Control Effectiveness", Model.ControlEffectiveness, "bi-gear-wide-connected"),
                                ("Policy Compliance", Model.PolicyCompliance, "bi-file-text"),
                                ("Audit Findings Resolved", Model.AuditFindingsResolved, "bi-check2-all"),
                                ("Incident Response Time", Model.IncidentResponseTime, "bi-lightning"),
                                ("Training Completion", Model.TrainingCompletion, "bi-mortarboard"),
                                ("Assessment Coverage", Model.AssessmentCoverage, "bi-clipboard-check"),
                                ("Vendor Compliance", Model.VendorCompliance, "bi-people"),
                                ("Data Protection Score", Model.DataProtectionScore, "bi-lock")
                            };
                        }
                        @foreach (var kpi in allKpis)
                        {
                            var status = kpi.Value >= 80 ? ("On Track", "success") : kpi.Value >= 60 ? ("Needs Attention", "warning") : ("Critical", "danger");
                            <tr>
                                <td>
                                    <i class="bi @kpi.Icon text-muted me-2"></i>
                                    <strong>@kpi.Name</strong>
                                </td>
                                <td>
                                    <span class="fs-5 fw-bold text-@status.Item2">@kpi.Value.ToString("F1")%</span>
                                </td>
                                <td>
                                    <span class="badge bg-@status.Item2">@status.Item1</span>
                                </td>
                                <td>
                                    <i class="bi bi-arrow-up-right text-success"></i>
                                    <small class="text-muted">+2.5%</small>
                                </td>
                                <td>
                                    <a asp-action="Dashboard" asp-route-kpiName="@kpi.Name" class="btn btn-sm btn-outline-primary" title="View Trends">
                                        <i class="bi bi-graph-up"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted small">
            <i class="bi bi-clock"></i> Last calculated: @Model.CalculatedAt.ToString("MMM dd, yyyy HH:mm") UTC
        </div>
    </div>
</div>
