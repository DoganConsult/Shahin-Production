@*
    Wizard Motivation Partial View
    Include this in wizard step views to enable motivation features
    Usage: @await Html.PartialAsync("_WizardMotivation", new { StepNumber = 1, StepName = "StepA" })
*@

@{
    var stepNumber = ViewData["StepNumber"] ?? 1;
    var stepName = ViewData["StepName"] ?? "StepA";
    var tenantId = ViewData["TenantId"] ?? Guid.Empty;
    var totalSteps = 12;
}

<!-- Motivation CSS -->
<link rel="stylesheet" href="~/css/wizard-motivation.css" asp-append-version="true" />

<!-- Motivation JS -->
<script src="~/js/wizard-motivation.js" asp-append-version="true"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize Motivation System
        window.wizardMotivation = new WizardMotivation({
            stepNumber: @stepNumber,
            totalSteps: @totalSteps,
            tenantId: '@tenantId',
            stepName: '@stepName'
        });

        // Initialize Live Preview Panel
        window.livePreview = new LivePreviewPanel({
            stepName: '@stepName'
        });

        // Initialize Why We Ask Tooltips
        window.tooltips = new WhyWeAskTooltips();

        // Console log for debugging
        console.log('Wizard Motivation System initialized for @stepName');
    });
</script>
