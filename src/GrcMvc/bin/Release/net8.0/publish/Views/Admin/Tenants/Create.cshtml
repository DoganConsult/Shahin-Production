@model Volo.Abp.TenantManagement.TenantCreateDto
@{
    ViewData["Title"] = "Create Tenant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Tenants</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4">Create New Tenant</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <h5 class="mb-3">Tenant Information</h5>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tenant Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Acme Corporation" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <small class="text-muted">Unique identifier for the tenant</small>
                        </div>

                        <h5 class="mb-3">Admin Account</h5>
                        <div class="mb-3">
                            <label asp-for="AdminEmailAddress" class="form-label">Admin Email <span class="text-danger">*</span></label>
                            <input asp-for="AdminEmailAddress" type="email" class="form-control" placeholder="admin@company.com" required />
                            <span asp-validation-for="AdminEmailAddress" class="text-danger"></span>
                            <small class="text-muted">Email for the tenant administrator account</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="AdminPassword" class="form-label">Admin Password <span class="text-danger">*</span></label>
                            <input asp-for="AdminPassword" type="password" class="form-control" placeholder="Strong password" required />
                            <span asp-validation-for="AdminPassword" class="text-danger"></span>
                            <small class="text-muted">Minimum 8 characters with uppercase, lowercase, number, and symbol</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-lg"></i> Create Tenant
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h6><i class="bi bi-info-circle"></i> What happens?</h6>
                    <ol class="small mb-0 ps-3">
                        <li>Tenant is created in the system</li>
                        <li>Tenant database is provisioned</li>
                        <li>Admin user account is created</li>
                        <li>Admin is assigned the "admin" role</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
