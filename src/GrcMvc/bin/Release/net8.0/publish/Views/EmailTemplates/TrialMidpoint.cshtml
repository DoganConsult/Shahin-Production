@model dynamic
@{
    Layout = null;
    var name = Model?.Name ?? "there";
    var companyName = Model?.CompanyName ?? "Your Company";
    var daysRemaining = Model?.DaysRemaining ?? 2;
    var accessLink = Model?.AccessLink ?? "#";
    var upgradeLink = Model?.UpgradeLink ?? "#";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Halfway through your trial - unlock the full potential</title>
</head>
<body style="margin: 0; padding: 0; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background-color: #f8fafc;">
    <table role="presentation" style="width: 100%; border-collapse: collapse;">
        <tr>
            <td style="padding: 40px 20px;">
                <table role="presentation" style="max-width: 600px; margin: 0 auto; background-color: #ffffff; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                    <tr>
                        <td style="padding: 30px 40px 20px; text-align: center; border-bottom: 1px solid #e2e8f0;">
                            <h1 style="margin: 0; font-size: 22px; color: #0f172a;">
                                Shahin<span style="color: #dc2626;">AI</span> GRC
                            </h1>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 20px 40px; background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);">
                            <table role="presentation" style="width: 100%;">
                                <tr>
                                    <td style="text-align: center;">
                                        <p style="margin: 0 0 5px; font-size: 14px; color: #bfdbfe;">TRIAL PROGRESS</p>
                                        <p style="margin: 0; font-size: 28px; color: #ffffff; font-weight: 700;">Day 5 of 7</p>
                                        <p style="margin: 5px 0 0; font-size: 14px; color: #bfdbfe;">@daysRemaining days remaining</p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 40px;">
                            <p style="margin: 0 0 20px; font-size: 16px; color: #334155;">Hello @name,</p>
                            <p style="margin: 0 0 20px; font-size: 16px; color: #334155; line-height: 1.6;">
                                You are halfway through your Shahin AI GRC trial! Here is what you can explore in the next @daysRemaining days:
                            </p>
                            <table role="presentation" style="width: 100%; margin: 20px 0;">
                                <tr>
                                    <td style="padding: 15px; background-color: #f0fdf4; border-left: 4px solid #22c55e; border-radius: 4px;">
                                        <p style="margin: 0; font-size: 14px; color: #166534;">
                                            <strong>Compliance Dashboard</strong><br>
                                            See your real-time compliance status across NCA, SAMA, and other frameworks
                                        </p>
                                    </td>
                                </tr>
                            </table>
                            <table role="presentation" style="width: 100%; margin: 10px 0;">
                                <tr>
                                    <td style="padding: 15px; background-color: #eff6ff; border-left: 4px solid #3b82f6; border-radius: 4px;">
                                        <p style="margin: 0; font-size: 14px; color: #1e40af;">
                                            <strong>Risk Register</strong><br>
                                            Track and manage organizational risks with automated scoring
                                        </p>
                                    </td>
                                </tr>
                            </table>
                            <table role="presentation" style="width: 100%;">
                                <tr>
                                    <td style="text-align: center; padding: 30px 0 20px;">
                                        <a href="@accessLink" style="display: inline-block; padding: 14px 32px; background-color: #dc2626; color: #ffffff; text-decoration: none; font-size: 16px; font-weight: 600; border-radius: 8px;">
                                            Continue Exploring
                                        </a>
                                    </td>
                                </tr>
                            </table>
                            <table role="presentation" style="width: 100%; margin-top: 20px; background-color: #fef2f2; border-radius: 8px;">
                                <tr>
                                    <td style="padding: 20px; text-align: center;">
                                        <p style="margin: 0 0 10px; font-size: 14px; color: #991b1b;">Ready to unlock all features?</p>
                                        <a href="@upgradeLink" style="color: #dc2626; font-weight: 600; text-decoration: none;">View Pricing Plans</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 20px 40px; background-color: #f8fafc; border-top: 1px solid #e2e8f0; border-radius: 0 0 12px 12px;">
                            <p style="margin: 0; font-size: 14px; color: #64748b; text-align: center;">
                                Questions? Reply to this email.<br><br>
                                <strong style="color: #334155;">The Shahin AI Team</strong>
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
