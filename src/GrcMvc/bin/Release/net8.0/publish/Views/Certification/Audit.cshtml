@using Microsoft.AspNetCore.Mvc.Localization
@using GrcMvc.Models.ViewModels.Certification
@inject IHtmlLocalizer<SharedResource> L
@model List<CertificationAuditViewModel>
@{
    ViewData["Title"] = "Certification Audits";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-file-earmark-text"></i> Certification Audits</h2>
            <p class="text-muted">Track certification audit history and findings</p>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Certifications
            </a>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#scheduleAuditModal">
                <i class="bi bi-calendar-plus"></i> Schedule Audit
            </button>
        </div>
    </div>

    <!-- Audit Summary -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Total Audits</h6>
                    <h2 class="mb-0">@Model.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Passed</h6>
                    <h2 class="mb-0">@Model.Count(a => a.Result == "Passed")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6>With Findings</h6>
                    <h2 class="mb-0">@Model.Count(a => a.FindingsCount > 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Scheduled</h6>
                    <h2 class="mb-0">@Model.Count(a => a.Status == "Scheduled")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Timeline -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Audit History & Schedule</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="timeline">
                            @foreach (var audit in Model.OrderByDescending(a => a.AuditDate))
                            {
                                var isPast = audit.AuditDate < DateTime.UtcNow;
                                var resultBadge = audit.Result switch
                                {
                                    "Passed" => "bg-success",
                                    "Passed with Findings" => "bg-warning text-dark",
                                    "Failed" => "bg-danger",
                                    _ => "bg-secondary"
                                };

                                <div class="timeline-item mb-4">
                                    <div class="row">
                                        <div class="col-md-2 text-end">
                                            <div class="badge @resultBadge py-2 px-3">
                                                @audit.AuditDate.ToString("MMM dd, yyyy")
                                            </div>
                                            <p class="small text-muted mt-1">@audit.AuditType</p>
                                        </div>
                                        <div class="col-md-10">
                                            <div class="card @(isPast ? "" : "border-primary")">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h6>
                                                                <i class="bi bi-building"></i> @audit.AuditorName
                                                                @if (!string.IsNullOrEmpty(audit.CertificationName))
                                                                {
                                                                    <span class="text-muted"> - @audit.CertificationName</span>
                                                                }
                                                            </h6>
                                                            @if (!string.IsNullOrEmpty(audit.Scope))
                                                            {
                                                                <p class="small text-muted mb-2">
                                                                    <strong>Scope:</strong> @audit.Scope
                                                                </p>
                                                            }
                                                        </div>
                                                        <div class="text-end">
                                                            <span class="badge @resultBadge">@audit.Result</span>
                                                            @if (audit.FindingsCount > 0)
                                                            {
                                                                <br />
                                                                <span class="badge bg-warning text-dark mt-1">
                                                                    @audit.FindingsCount Findings
                                                                </span>
                                                            }
                                                        </div>
                                                    </div>

                                                    @if (isPast && audit.FindingsCount > 0)
                                                    {
                                                        <hr />
                                                        <h6 class="small"><i class="bi bi-exclamation-triangle text-warning"></i> Key Findings:</h6>
                                                        <ul class="small mb-0">
                                                            @foreach (var finding in (audit.Findings ?? Enumerable.Empty<string>()).Take(3))
                                                            {
                                                                <li>@finding</li>
                                                            }
                                                            @if (audit.Findings?.Count() > 3)
                                                            {
                                                                <li class="text-muted">... and @(audit.Findings.Count() - 3) more</li>
                                                            }
                                                        </ul>
                                                    }

                                                    @if (!isPast)
                                                    {
                                                        <div class="alert alert-info mt-3 mb-0">
                                                            <i class="bi bi-calendar-event"></i>
                                                            <strong>Upcoming Audit</strong> -
                                                            @((audit.AuditDate - DateTime.UtcNow).Days) days remaining
                                                        </div>
                                                    }

                                                    <div class="mt-3">
                                                        @if (!string.IsNullOrEmpty(audit.ReportUrl))
                                                        {
                                                            <a href="@audit.ReportUrl" class="btn btn-sm btn-outline-primary" target="_blank">
                                                                <i class="bi bi-file-pdf"></i> View Report
                                                            </a>
                                                        }
                                                        @if (isPast && audit.FindingsCount > 0)
                                                        {
                                                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="viewFindings('@audit.Id')">
                                                                <i class="bi bi-list-check"></i> View All Findings
                                                            </button>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-file-earmark-text display-1 text-muted opacity-25"></i>
                            <p class="text-muted mt-3">No audits scheduled or recorded yet</p>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#scheduleAuditModal">
                                <i class="bi bi-calendar-plus"></i> Schedule First Audit
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Statistics -->
    @if (Model.Any())
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-bar-chart"></i> Audit Results Trend</h6>
                    </div>
                    <div class="card-body">
                        <canvas id="auditTrendChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-pie-chart"></i> Findings by Severity</h6>
                    </div>
                    <div class="card-body">
                        <canvas id="findingsSeverityChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Schedule Audit Modal -->
<div class="modal fade" id="scheduleAuditModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Schedule Certification Audit</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ScheduleAudit" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Certification *</label>
                        <select class="form-select" name="CertificationId" required>
                            <option value="">Select Certification</option>
                            <!-- Populated from available certifications -->
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Audit Type *</label>
                            <select class="form-select" name="AuditType" required>
                                <option value="Initial Certification">Initial Certification</option>
                                <option value="Surveillance">Surveillance Audit</option>
                                <option value="Recertification">Recertification</option>
                                <option value="Internal">Internal Audit</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Audit Date *</label>
                            <input type="date" class="form-control" name="AuditDate" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Auditor/Certification Body *</label>
                        <input type="text" class="form-control" name="AuditorName" placeholder="e.g., BSI Group, AICPA" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Audit Scope</label>
                        <textarea class="form-control" name="Scope" rows="2" placeholder="Define the scope of the audit (locations, processes, systems)"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Lead Auditor</label>
                            <input type="text" class="form-control" name="LeadAuditor">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Duration (days)</label>
                            <input type="number" class="form-control" name="DurationDays" min="1" value="3">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Schedule Audit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Findings Modal -->
<div class="modal fade" id="findingsModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Audit Findings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="findingsModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-3">Loading findings...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" onclick="exportFindings()">
                    <i class="bi bi-download"></i> Export
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let currentAuditId = null;

        async function viewFindings(auditId) {
            currentAuditId = auditId;
            const modal = new bootstrap.Modal(document.getElementById('findingsModal'));
            modal.show();

            const modalBody = document.getElementById('findingsModalBody');
            modalBody.innerHTML = `
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="text-muted mt-3">Loading findings...</p>
                </div>
            `;

            try {
                const response = await fetch('/api/certification/audits/' + auditId + '/findings');
                const data = await response.json();

                if (!data.findings || data.findings.length === 0) {
                    modalBody.innerHTML = `
                        <div class="text-center py-5">
                            <i class="bi bi-check-circle display-4 text-success"></i>
                            <p class="text-muted mt-3">No findings recorded for this audit</p>
                        </div>
                    `;
                    return;
                }

                // Update modal title with audit info
                document.querySelector('#findingsModal .modal-title').innerHTML =
                    '<i class="bi bi-exclamation-triangle me-2"></i>Audit Findings - ' + (data.auditName || 'Audit ' + auditId);

                // Build findings content
                let html = `
                    <div class="mb-3">
                        <div class="row text-center">
                            <div class="col-3">
                                <div class="badge bg-danger p-2">Critical: ${data.summary?.critical || 0}</div>
                            </div>
                            <div class="col-3">
                                <div class="badge bg-warning text-dark p-2">High: ${data.summary?.high || 0}</div>
                            </div>
                            <div class="col-3">
                                <div class="badge bg-info p-2">Medium: ${data.summary?.medium || 0}</div>
                            </div>
                            <div class="col-3">
                                <div class="badge bg-secondary p-2">Low: ${data.summary?.low || 0}</div>
                            </div>
                        </div>
                    </div>
                    <hr/>
                    <div class="list-group list-group-flush">
                `;

                data.findings.forEach((finding, index) => {
                    const severityClass = {
                        'Critical': 'danger',
                        'High': 'warning',
                        'Medium': 'info',
                        'Low': 'secondary'
                    }[finding.severity] || 'secondary';

                    html += `
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">
                                        <span class="badge bg-${severityClass} me-2">${finding.severity}</span>
                                        ${finding.title || 'Finding ' + (index + 1)}
                                    </h6>
                                    <p class="mb-1 text-muted small">${finding.description || ''}</p>
                                    ${finding.recommendation ? `
                                        <p class="mb-0 small">
                                            <strong><i class="bi bi-lightbulb me-1"></i>Recommendation:</strong>
                                            ${finding.recommendation}
                                        </p>
                                    ` : ''}
                                </div>
                                <span class="badge ${finding.status === 'Resolved' ? 'bg-success' : 'bg-warning text-dark'}">
                                    ${finding.status || 'Open'}
                                </span>
                            </div>
                            ${finding.controlRef ? `
                                <small class="text-muted mt-2 d-block">
                                    <i class="bi bi-link-45deg"></i> Control: ${finding.controlRef}
                                </small>
                            ` : ''}
                        </div>
                    `;
                });

                html += '</div>';
                modalBody.innerHTML = html;

            } catch (error) {
                console.error('Error loading findings:', error);
                modalBody.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        Failed to load findings. Please try again.
                    </div>
                `;
            }
        }

        function exportFindings() {
            if (!currentAuditId) return;
            window.location.href = '/api/certification/audits/' + currentAuditId + '/findings/export';
        }

        @if (Model.Any())
        {
            <text>
            // Audit Trend Chart
            const trendCtx = document.getElementById('auditTrendChart').getContext('2d');
            new Chart(trendCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrderBy(a => a.AuditDate).Select(a => a.AuditDate.ToString("MMM yyyy")))),
                    datasets: [{
                        label: 'Findings Count',
                        data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.OrderBy(a => a.AuditDate).Select(a => a.FindingsCount))),
                        borderColor: 'rgb(255, 206, 86)',
                        backgroundColor: 'rgba(255, 206, 86, 0.1)',
                        tension: 0.1
                    }]
                },
                options: {
                    responsive: true,
                    scales: { y: { beginAtZero: true } }
                }
            });

            // Findings Severity Chart
            const severityCtx = document.getElementById('findingsSeverityChart').getContext('2d');
            const totalFindings = @Model.Sum(a => a.FindingsCount);
            new Chart(severityCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Critical', 'High', 'Medium', 'Low'],
                    datasets: [{
                        data: [
                            Math.floor(totalFindings * 0.1),
                            Math.floor(totalFindings * 0.3),
                            Math.floor(totalFindings * 0.4),
                            Math.floor(totalFindings * 0.2)
                        ],
                        backgroundColor: ['#dc3545', '#fd7e14', '#ffc107', '#28a745']
                    }]
                },
                options: { responsive: true }
            });
            </text>
        }
    </script>
}
