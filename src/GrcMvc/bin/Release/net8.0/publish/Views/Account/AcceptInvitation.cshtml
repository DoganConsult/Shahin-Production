@model GrcMvc.Models.ViewModels.AcceptInvitationViewModel
@{
    ViewData["Title"] = "Accept Invitation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-person-plus"></i> Accept Invitation</h4>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> @ViewBag.Error
                        </div>
                    }

                    @if (ViewBag.Expired == true)
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-clock-history display-1 text-warning"></i>
                            <h5 class="mt-3">Invitation Expired</h5>
                            <p class="text-muted">This invitation link has expired. Please contact your administrator to request a new invitation.</p>
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Go to Login</a>
                        </div>
                    }
                    else if (ViewBag.Success == true)
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-check-circle display-1 text-success"></i>
                            <h5 class="mt-3">Account Activated!</h5>
                            <p class="text-muted">Your account has been activated successfully. You can now log in.</p>
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Login Now
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <p class="text-muted">Welcome! Please set your password to activate your account.</p>
                            @if (!string.IsNullOrEmpty(Model?.OrganizationName))
                            {
                                <div class="alert alert-info">
                                    <strong>Organization:</strong> @Model.OrganizationName
                                </div>
                            }
                        </div>

                        <form asp-action="AcceptInvitation" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Token" />

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" readonly />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">
                                    <span class="text-danger">*</span> Password
                                </label>
                                <input asp-for="Password" type="password" class="form-control" required 
                                       minlength="8" placeholder="Enter your password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                                <small class="text-muted">Minimum 8 characters with uppercase, lowercase, and number</small>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <span class="text-danger">*</span> Confirm Password
                                </label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" required 
                                       placeholder="Confirm your password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-lg"></i> Activate Account
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Account")" class="text-muted">
                    <i class="bi bi-arrow-left"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Password validation
        document.querySelector('form')?.addEventListener('submit', function(e) {
            const password = document.querySelector('input[name="Password"]').value;
            const confirm = document.querySelector('input[name="ConfirmPassword"]').value;
            
            if (password !== confirm) {
                e.preventDefault();
                alert('Passwords do not match');
            }
        });
    </script>
}
