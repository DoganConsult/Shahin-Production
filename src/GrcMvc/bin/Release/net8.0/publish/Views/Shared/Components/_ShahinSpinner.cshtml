@*
    SHAHIN AI GRC - Loading Spinner Component
    Usage: <partial name="Components/_ShahinSpinner" model='new { Size = "md", Text = "Loading..." }' />
*@
@{
    dynamic model = ViewData.Model ?? new { };
    var size = model?.Size ?? "base"; // sm, base, lg
    var text = model?.Text ?? "";
    var cssClass = model?.CssClass ?? "";

    var spinnerClass = "shahin-spinner";
    if (size != "base") {
        spinnerClass += $" shahin-spinner-{size}";
    }
    if (!string.IsNullOrEmpty(cssClass)) {
        spinnerClass += $" {cssClass}";
    }
}

<div class="shahin-flex shahin-flex-col shahin-items-center shahin-gap-4">
    <div class="@spinnerClass" role="status">
        <span class="shahin-hidden">Loading...</span>
    </div>
    @if (!string.IsNullOrEmpty(text)) {
        <p class="shahin-text-sm shahin-text-muted">@text</p>
    }
</div>
