@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Models.DTOs.ExcellenceInitiativeDto
@{
    ViewData["Title"] = "Edit Excellence Initiative";
    Layout = "_Layout";
    var initiativeId = ViewBag.InitiativeId ?? Model?.Id ?? Guid.Empty;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-pencil"></i> Edit Excellence Initiative</h2>
            <p class="text-muted">Update initiative details and track progress</p>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-action="Details" asp-route-id="@initiativeId" class="btn btn-outline-primary">
                <i class="bi bi-eye"></i> View Details
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@initiativeId" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Initiative Name <span class="text-danger">*</span></label>
                            <input type="text" name="Name" class="form-control" required
                                   value="@Model?.Name" placeholder="Initiative name" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea name="Description" class="form-control" rows="4">@Model?.Description</textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Type <span class="text-danger">*</span></label>
                                <select name="Type" class="form-select" required>
                                    <option value="Certification" selected="@(Model?.Type == "Certification")">Certification Program</option>
                                    <option value="Process" selected="@(Model?.Type == "Process")">Process Improvement</option>
                                    <option value="Technology" selected="@(Model?.Type == "Technology")">Technology Enhancement</option>
                                    <option value="Training" selected="@(Model?.Type == "Training")">Training & Development</option>
                                    <option value="Governance" selected="@(Model?.Type == "Governance")">Governance Framework</option>
                                    <option value="Compliance" selected="@(Model?.Type == "Compliance")">Compliance Program</option>
                                    <option value="Quality" selected="@(Model?.Type == "Quality")">Quality Management</option>
                                    <option value="Innovation" selected="@(Model?.Type == "Innovation")">Innovation Initiative</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Category <span class="text-danger">*</span></label>
                                <select name="Category" class="form-select" required>
                                    <option value="Strategic" selected="@(Model?.Category == "Strategic")">Strategic</option>
                                    <option value="Operational" selected="@(Model?.Category == "Operational")">Operational</option>
                                    <option value="Technical" selected="@(Model?.Category == "Technical")">Technical</option>
                                    <option value="People" selected="@(Model?.Category == "People")">People & Culture</option>
                                    <option value="Process" selected="@(Model?.Category == "Process")">Process</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Owner <span class="text-danger">*</span></label>
                                <input type="text" name="Owner" class="form-control" required
                                       value="@Model?.Owner" placeholder="Responsible person or team" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Target Completion Date</label>
                                <input type="date" name="TargetDate" class="form-control"
                                       value="@Model?.TargetDate?.ToString("yyyy-MM-dd")" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Status <span class="text-danger">*</span></label>
                                <select name="Status" class="form-select" required>
                                    <option value="Planned" selected="@(Model?.Status == "Planned")">Planned</option>
                                    <option value="InProgress" selected="@(Model?.Status == "InProgress")">In Progress</option>
                                    <option value="Completed" selected="@(Model?.Status == "Completed")">Completed</option>
                                    <option value="OnHold" selected="@(Model?.Status == "OnHold")">On Hold</option>
                                    <option value="Cancelled" selected="@(Model?.Status == "Cancelled")">Cancelled</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Progress (%) <span class="text-danger">*</span></label>
                                <input type="number" name="Progress" class="form-control" required
                                       min="0" max="100" value="@(Model?.Progress ?? 0)" />
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@initiativeId" class="btn btn-outline-primary me-2">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            @if (Model != null)
            {
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-graph-up"></i> Progress
                    </div>
                    <div class="card-body text-center">
                        <div class="display-3 text-primary">@((Model.Progress ?? 0).ToString("F0"))%</div>
                        <div class="progress mt-2" style="height: 25px;">
                            <div class="progress-bar @((Model.Progress ?? 0) >= 100 ? "bg-success" : "")"
                                 style="width: @(Model.Progress ?? 0)%">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-info-circle"></i> Quick Info
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Type</span>
                            <span class="badge bg-secondary">@Model.Type</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Status</span>
                            @{
                                var statusClass = Model.Status switch {
                                    "InProgress" => "bg-primary",
                                    "Completed" => "bg-success",
                                    "OnHold" => "bg-warning text-dark",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusClass">@Model.Status</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Category</span>
                            <span class="badge bg-light text-dark">@Model.Category</span>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Loading initiative data...
                </div>
            }
        </div>
    </div>
</div>
