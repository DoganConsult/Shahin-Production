@model GrcMvc.Models.Entities.Catalogs.RoleCatalog
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "PlatformAdminMvc")">Platform Admin</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Roles")">Roles</a></li>
            <li class="breadcrumb-item active">Edit @Model.RoleName</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4">Edit Role: @Model.RoleName</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="EditRole" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <h5 class="mb-3">Basic Information</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label">Role Code <span class="text-danger">*</span></label>
                                <input asp-for="RoleCode" class="form-control" required readonly>
                                <small class="text-muted">Role code cannot be changed</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Role Name <span class="text-danger">*</span></label>
                                <input asp-for="RoleName" class="form-control" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                            </div>
                        </div>

                        <h5 class="mb-3">Classification</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label class="form-label">Layer</label>
                                <select asp-for="Layer" class="form-select">
                                    <option value="Executive">Executive</option>
                                    <option value="Management">Management</option>
                                    <option value="Operational">Operational</option>
                                    <option value="Support">Support</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Department</label>
                                <select asp-for="Department" class="form-select">
                                    <option value="">Select Department</option>
                                    <option value="Compliance">Compliance</option>
                                    <option value="Security">Security</option>
                                    <option value="Risk">Risk Management</option>
                                    <option value="IT">IT</option>
                                    <option value="Legal">Legal</option>
                                    <option value="Finance">Finance</option>
                                    <option value="HR">Human Resources</option>
                                    <option value="Operations">Operations</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Approval Level (0-4)</label>
                                <select asp-for="ApprovalLevel" class="form-select">
                                    <option value="0">0 - No Approval</option>
                                    <option value="1">1 - Basic</option>
                                    <option value="2">2 - Standard</option>
                                    <option value="3">3 - Senior</option>
                                    <option value="4">4 - Executive</option>
                                </select>
                            </div>
                        </div>

                        <h5 class="mb-3">Workflow Permissions</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-3">
                                <div class="form-check">
                                    <input asp-for="CanApprove" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanApprove">Can Approve</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check">
                                    <input asp-for="CanReject" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanReject">Can Reject</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check">
                                    <input asp-for="CanEscalate" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanEscalate">Can Escalate</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check">
                                    <input asp-for="CanReassign" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="CanReassign">Can Reassign</label>
                                </div>
                            </div>
                        </div>

                        <h5 class="mb-3">Display Settings</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label">Display Order</label>
                                <input asp-for="DisplayOrder" type="number" class="form-control" min="0">
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <div class="form-check mt-3">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="IsActive">Active</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Save Changes
                            </button>
                            <a href="@Url.Action("Roles")" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-clock-history"></i> Role Info</h6>
                </div>
                <div class="card-body">
                    <dl class="small mb-0">
                        <dt>Created</dt>
                        <dd>@Model.CreatedDate.ToString("MMM dd, yyyy HH:mm")</dd>
                        <dt>Last Modified</dt>
                        <dd>@(Model.ModifiedDate?.ToString("MMM dd, yyyy HH:mm") ?? "Never")</dd>
                        <dt>ID</dt>
                        <dd><code class="small">@Model.Id</code></dd>
                    </dl>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-people"></i> Associated Titles</h6>
                </div>
                <div class="card-body">
                    @if (Model.AllowedTitles?.Any() == true)
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var title in Model.AllowedTitles)
                            {
                                <li><i class="bi bi-dot"></i> @title.TitleName</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0 small">No titles associated</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
