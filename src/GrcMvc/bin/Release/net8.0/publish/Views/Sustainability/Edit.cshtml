@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Services.Interfaces.SustainabilityImprovementDto
@{
    ViewData["Title"] = "Edit Sustainability Initiative";
    Layout = "_Layout";
    var initiativeId = ViewBag.InitiativeId ?? Model?.Id ?? Guid.Empty;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-pencil"></i> Edit Sustainability Initiative</h2>
            <p class="text-muted">Update initiative details and progress</p>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-action="Details" asp-route-id="@initiativeId" class="btn btn-outline-primary">
                <i class="bi bi-eye"></i> View Details
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@initiativeId" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Initiative Code</label>
                                <input type="text" name="InitiativeCode" class="form-control" readonly
                                       value="@Model?.InitiativeCode" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Status <span class="text-danger">*</span></label>
                                <select name="Status" class="form-select" required>
                                    <option value="Planned" selected="@(Model?.Status == "Planned")">Planned</option>
                                    <option value="InProgress" selected="@(Model?.Status == "InProgress")">In Progress</option>
                                    <option value="Completed" selected="@(Model?.Status == "Completed")">Completed</option>
                                    <option value="OnHold" selected="@(Model?.Status == "OnHold")">On Hold</option>
                                    <option value="Cancelled" selected="@(Model?.Status == "Cancelled")">Cancelled</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Progress (%) <span class="text-danger">*</span></label>
                                <input type="number" name="PercentComplete" class="form-control" min="0" max="100"
                                       value="@(Model?.PercentComplete ?? 0)" required />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Title <span class="text-danger">*</span></label>
                                <input type="text" name="Title" class="form-control" required
                                       value="@Model?.Title" placeholder="Initiative title" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Title (Arabic)</label>
                                <input type="text" name="TitleAr" class="form-control" dir="rtl"
                                       value="@Model?.TitleAr" placeholder="عنوان المبادرة" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description <span class="text-danger">*</span></label>
                            <textarea name="Description" class="form-control" rows="4" required>@Model?.Description</textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Category <span class="text-danger">*</span></label>
                                <select name="Category" class="form-select" required>
                                    <option value="Process" selected="@(Model?.Category == "Process")">Process Improvement</option>
                                    <option value="Technology" selected="@(Model?.Category == "Technology")">Technology Enhancement</option>
                                    <option value="People" selected="@(Model?.Category == "People")">People & Training</option>
                                    <option value="Policy" selected="@(Model?.Category == "Policy")">Policy & Governance</option>
                                    <option value="Compliance" selected="@(Model?.Category == "Compliance")">Compliance Program</option>
                                    <option value="Risk" selected="@(Model?.Category == "Risk")">Risk Management</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Priority <span class="text-danger">*</span></label>
                                <select name="Priority" class="form-select" required>
                                    <option value="Low" selected="@(Model?.Priority == "Low")">Low</option>
                                    <option value="Medium" selected="@(Model?.Priority == "Medium")">Medium</option>
                                    <option value="High" selected="@(Model?.Priority == "High")">High</option>
                                    <option value="Critical" selected="@(Model?.Priority == "Critical")">Critical</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Expected Impact (%)</label>
                                <input type="number" name="ExpectedImpact" class="form-control" min="0" max="100"
                                       value="@(Model?.ExpectedImpact ?? 0)" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Owner <span class="text-danger">*</span></label>
                                <input type="text" name="Owner" class="form-control" required
                                       value="@Model?.Owner" placeholder="Responsible person or team" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Target Date</label>
                                <input type="date" name="TargetDate" class="form-control"
                                       value="@Model?.TargetDate?.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Actual Impact (%)</label>
                                <input type="number" name="ActualImpact" class="form-control" min="0" max="100"
                                       value="@(Model?.ActualImpact ?? 0)" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Outcomes / Notes</label>
                            <textarea name="Outcomes" class="form-control" rows="3" placeholder="Document outcomes, lessons learned, or progress notes">@Model?.Outcomes</textarea>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-clock-history"></i> Initiative Timeline
                </div>
                <div class="card-body">
                    <ul class="list-unstyled small">
                        <li class="mb-2">
                            <strong>Created:</strong><br />
                            @(Model?.CreatedAt.ToString("MMM dd, yyyy") ?? "N/A")
                        </li>
                        @if (Model?.TargetDate.HasValue == true)
                        {
                            <li class="mb-2">
                                <strong>Target:</strong><br />
                                @Model.TargetDate.Value.ToString("MMM dd, yyyy")
                            </li>
                        }
                        @if (Model?.CompletedAt.HasValue == true)
                        {
                            <li class="mb-2 text-success">
                                <strong>Completed:</strong><br />
                                @Model.CompletedAt.Value.ToString("MMM dd, yyyy")
                            </li>
                        }
                    </ul>
                </div>
            </div>

            @if (Model != null)
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <i class="bi bi-graph-up"></i> Progress
                    </div>
                    <div class="card-body text-center">
                        <div class="display-4 text-primary">@Model.PercentComplete.ToString("F0")%</div>
                        <div class="progress mt-2" style="height: 25px;">
                            <div class="progress-bar @(Model.PercentComplete >= 100 ? "bg-success" : "")"
                                 style="width: @Model.PercentComplete%">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
