@model IEnumerable<GrcMvc.Models.Entities.Tenant>
@{
    ViewData["Title"] = "Tenant Management";
    var userCounts = ViewBag.UserCounts as Dictionary<Guid, int> ?? new Dictionary<Guid, int>();
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-building"></i> Tenant Management</h2>
            <p class="text-muted">Manage all organizations on the platform</p>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Tenant
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Tenants</h5>
                    <h2>@ViewBag.TotalCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Active</h5>
                    <h2>@Model.Count(t => t.Status == "Active")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Pending</h5>
                    <h2>@Model.Count(t => t.Status == "Pending")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Suspended</h5>
                    <h2>@Model.Count(t => t.Status == "Suspended")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="search" class="form-control" value="@ViewBag.SearchFilter" placeholder="Organization name or slug...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="Active" selected="@(ViewBag.StatusFilter == "Active")">Active</option>
                        <option value="Pending" selected="@(ViewBag.StatusFilter == "Pending")">Pending</option>
                        <option value="Suspended" selected="@(ViewBag.StatusFilter == "Suspended")">Suspended</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tenants Table -->
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Organization</th>
                        <th>Slug</th>
                        <th>Status</th>
                        <th>Tier</th>
                        <th>Users</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tenant in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@tenant.Id" class="text-decoration-none fw-bold">
                                    @tenant.OrganizationName
                                </a>
                            </td>
                            <td>
                                <code>@tenant.TenantSlug</code>
                            </td>
                            <td>
                                @if (tenant.Status == "Active")
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else if (tenant.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (tenant.Status == "Suspended")
                                {
                                    <span class="badge bg-danger">Suspended</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@tenant.Status</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">@tenant.SubscriptionTier</span>
                            </td>
                            <td>
                                @(userCounts.TryGetValue(tenant.Id, out var count) ? count : 0)
                            </td>
                            <td>
                                @tenant.CreatedDate.ToString("yyyy-MM-dd")
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@tenant.Id" class="btn btn-outline-primary" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@tenant.Id" class="btn btn-outline-secondary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <div class="card-footer">
                <nav>
                    <ul class="pagination mb-0 justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-status="@ViewBag.StatusFilter" asp-route-search="@ViewBag.SearchFilter">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
