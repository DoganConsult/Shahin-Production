                    new { Icon = "bi-cpu", Name = "Shahin Orchestrator", Desc = "Central AI coordinator", Color = "#8b5cf6" },
                    new { Icon = "bi-shield-check", Name = "Compliance Agent", Desc = "Regulatory monitoring", Color = "#2563eb" },
                    new { Icon = "bi-graph-up-arrow", Name = "Risk Agent", Desc = "Risk assessment & scoring", Color = "#ef4444" },
                    new { Icon = "bi-clipboard-check", Name = "Audit Agent", Desc = "Audit trail management", Color = "#10b981" },
                    new { Icon = "bi-file-earmark-text", Name = "Policy Agent", Desc = "Policy lifecycle", Color = "#f59e0b" },
                    new { Icon = "bi-bar-chart-line", Name = "Analytics Agent", Desc = "Real-time insights", Color = "#06b6d4" },
                    new { Icon = "bi-file-richtext", Name = "Report Agent", Desc = "Automated reporting", Color = "#ec4899" },
