@page
@model GrcMvc.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logged Out";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shahin AI GRC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .logout-card {
            background: white;
            border-radius: 16px;
            padding: 3rem;
            text-align: center;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }
        .logout-card h2 {
            margin-bottom: 1rem;
            color: #1f2937;
        }
        .logout-card p {
            color: #6b7280;
            margin-bottom: 1.5rem;
        }
        .btn-primary {
            background: #2563eb;
            border: none;
            border-radius: 8px;
            padding: 0.75rem 2rem;
        }
    </style>
</head>
<body>
    <div class="logout-card">
        <h2>You've been logged out</h2>
        <p>Thank you for using Shahin AI GRC Platform.</p>
        <a href="/Account/Login" class="btn btn-primary">Sign In Again</a>
    </div>
</body>
</html>
