@model GrcMvc.Controllers.ConfigurationViewModel
@{
    ViewData["Title"] = "Configuration Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="bi bi-gear"></i> Configuration Management</h1>
            <small class="text-muted">Environment: <span class="badge bg-info">@Model.Environment</span></small>
        </div>
        <a href="@Url.Action("Export")" class="btn btn-outline-secondary" target="_blank">
            <i class="bi bi-download"></i> Export Config
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- SMTP Settings -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-envelope"></i> Email (SMTP)</h5>
                    @if (Model.SmtpPasswordSet)
                    {
                        <span class="badge bg-success">Configured</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Not Set</span>
                    }
                </div>
                <div class="card-body">
                    <form asp-action="UpdateSmtp" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label class="form-label">SMTP Host</label>
                            <input type="text" name="Host" class="form-control" value="@Model.SmtpHost" placeholder="smtp.office365.com" />
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Port</label>
                                <input type="text" name="Port" class="form-control" value="@Model.SmtpPort" placeholder="587" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">From Email</label>
                                <input type="email" name="FromEmail" class="form-control" value="@Model.SmtpFromEmail" />
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input type="text" name="Username" class="form-control" value="@Model.SmtpUsername" />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" name="Password" class="form-control" placeholder="@(Model.SmtpPasswordSet ? "••••••••" : "Enter password")" />
                            <small class="text-muted">Leave blank to keep current</small>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Save
                            </button>
                        </div>
                    </form>
                    
                    <hr />
                    
                    <form asp-action="TestSmtp" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <div class="input-group">
                            <input type="email" name="testEmail" class="form-control" placeholder="test@example.com" required />
                            <button type="submit" class="btn btn-outline-success">
                                <i class="bi bi-send"></i> Test
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- AI Settings -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-robot"></i> AI (Claude)</h5>
                    @if (Model.ClaudeEnabled && Model.ClaudeApiKeySet)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else if (Model.ClaudeApiKeySet)
                    {
                        <span class="badge bg-secondary">Disabled</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Not Set</span>
                    }
                </div>
                <div class="card-body">
                    <form asp-action="UpdateAi" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label class="form-label">API Key</label>
                            <input type="password" name="ApiKey" class="form-control" placeholder="@(Model.ClaudeApiKeySet ? "••••••••" : "sk-ant-...")" />
                            <small class="text-muted">Leave blank to keep current</small>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Model</label>
                            <select name="Model" class="form-select">
                                <option value="claude-sonnet-4-20250514" selected="@(Model.ClaudeModel.Contains("sonnet"))">Claude Sonnet 4</option>
                                <option value="claude-3-opus-20240229" selected="@(Model.ClaudeModel.Contains("opus"))">Claude 3 Opus</option>
                                <option value="claude-3-haiku-20240307" selected="@(Model.ClaudeModel.Contains("haiku"))">Claude 3 Haiku</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input type="checkbox" name="Enabled" value="true" class="form-check-input" id="aiEnabled" @(Model.ClaudeEnabled ? "checked" : "") />
                                <label class="form-check-label" for="aiEnabled">Enable AI Features</label>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Save
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Database Status -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-database"></i> Database</h5>
                    @if (Model.DbPasswordSet)
                    {
                        <span class="badge bg-success">Connected</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Check Config</span>
                    }
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Host</dt>
                        <dd class="col-sm-8"><code>@Model.DbHost</code></dd>
                        
                        <dt class="col-sm-4">Database</dt>
                        <dd class="col-sm-8"><code>@Model.DbName</code></dd>
                        
                        <dt class="col-sm-4">Password</dt>
                        <dd class="col-sm-8">
                            @if (Model.DbPasswordSet)
                            {
                                <span class="text-success"><i class="bi bi-check-circle"></i> Set via DB_PASSWORD</span>
                            }
                            else
                            {
                                <span class="text-warning"><i class="bi bi-exclamation-triangle"></i> Not set</span>
                            }
                        </dd>
                    </dl>
                    <div class="alert alert-info mt-3 mb-0 small">
                        <i class="bi bi-info-circle"></i> Database settings require restart to change.
                    </div>
                </div>
            </div>
        </div>

        <!-- JWT & Security -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-shield-lock"></i> JWT & Security</h5>
                    @if (Model.JwtSecretSet)
                    {
                        <span class="badge bg-success">Configured</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Not Set!</span>
                    }
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Issuer</dt>
                        <dd class="col-sm-8"><code>@Model.JwtIssuer</code></dd>
                        
                        <dt class="col-sm-4">Audience</dt>
                        <dd class="col-sm-8"><code>@Model.JwtAudience</code></dd>
                        
                        <dt class="col-sm-4">Secret</dt>
                        <dd class="col-sm-8">
                            @if (Model.JwtSecretSet)
                            {
                                <span class="text-success"><i class="bi bi-check-circle"></i> Set via JWT_SECRET</span>
                            }
                            else
                            {
                                <span class="text-danger"><i class="bi bi-x-circle"></i> Not set - REQUIRED</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Azure / Microsoft Graph -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-microsoft"></i> Azure / Microsoft</h5>
                    @if (Model.MsGraphSecretSet)
                    {
                        <span class="badge bg-success">Configured</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Optional</span>
                    }
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Tenant ID</dt>
                        <dd class="col-sm-8"><code>@Model.AzureTenantId</code></dd>
                        
                        <dt class="col-sm-4">Client ID</dt>
                        <dd class="col-sm-8"><code>@Model.MsGraphClientId</code></dd>
                        
                        <dt class="col-sm-4">Client Secret</dt>
                        <dd class="col-sm-8">
                            @if (Model.MsGraphSecretSet)
                            {
                                <span class="text-success"><i class="bi bi-check-circle"></i> Set</span>
                            }
                            else
                            {
                                <span class="text-muted"><i class="bi bi-dash-circle"></i> Not set</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- App Info -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Application Info</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.AppName</dd>
                        
                        <dt class="col-sm-4">Version</dt>
                        <dd class="col-sm-8">@Model.AppVersion</dd>
                        
                        <dt class="col-sm-4">Base URL</dt>
                        <dd class="col-sm-8"><code>@Model.BaseUrl</code></dd>
                        
                        <dt class="col-sm-4">Environment</dt>
                        <dd class="col-sm-8"><span class="badge bg-info">@Model.Environment</span></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Environment Variables Reference -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-terminal"></i> Environment Variables Reference</h5>
        </div>
        <div class="card-body">
            <pre class="bg-dark text-light p-3 rounded"><code># Required
$env:JWT_SECRET = "your-secret-min-32-chars"
$env:DB_PASSWORD = "database-password"

# Email (Microsoft 365)
$env:SMTP_PASSWORD = "email-password"
$env:SMTP_USERNAME = "info@doganconsult.com"

# Optional - Azure
$env:AZURE_TENANT_ID = "tenant-id"
$env:MSGRAPH_CLIENT_ID = "client-id"
$env:MSGRAPH_CLIENT_SECRET = "secret"

# Optional - AI
$env:CLAUDE_API_KEY = "sk-ant-..."
$env:CLAUDE_ENABLED = "true"</code></pre>
        </div>
    </div>
</div>
