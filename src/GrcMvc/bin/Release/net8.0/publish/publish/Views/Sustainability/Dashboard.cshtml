@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model GrcMvc.Services.Interfaces.SustainabilityDashboardDto
@{
    ViewData["Title"] = "Sustainability Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-speedometer2"></i> Sustainability Dashboard</h2>
            <p class="text-muted">GRC maturity, KPIs, and compliance health overview</p>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-list"></i> All Initiatives
            </a>
        </div>
    </div>

    <!-- Maturity Score Section -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-graph-up-arrow"></i> GRC Maturity
                </div>
                <div class="card-body text-center">
                    <div class="display-1 text-primary mb-2">@Model.Maturity.OverallScore.ToString("F0")</div>
                    <h4>@Model.Maturity.MaturityLevel</h4>
                    @if (!string.IsNullOrEmpty(Model.Maturity.MaturityLevelAr))
                    {
                        <p class="text-muted" dir="rtl">@Model.Maturity.MaturityLevelAr</p>
                    }
                    <div class="mt-3">
                        <span class="badge bg-secondary fs-6">Tier @Model.Maturity.MaturityTier / 5</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-header">
                    <i class="bi bi-pie-chart"></i> Maturity by Dimension
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Governance</span>
                                    <span>@Model.Maturity.Governance.Score.ToString("F0")%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-primary" style="width: @Model.Maturity.Governance.Score%"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Risk Management</span>
                                    <span>@Model.Maturity.Risk.Score.ToString("F0")%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-warning" style="width: @Model.Maturity.Risk.Score%"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Compliance</span>
                                    <span>@Model.Maturity.Compliance.Score.ToString("F0")%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-success" style="width: @Model.Maturity.Compliance.Score%"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Resilience</span>
                                    <span>@Model.Maturity.Resilience.Score.ToString("F0")%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-info" style="width: @Model.Maturity.Resilience.Score%"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <span>Excellence</span>
                                    <span>@Model.Maturity.Excellence.Score.ToString("F0")%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-purple" style="width: @Model.Maturity.Excellence.Score%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- KPIs Row -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-clipboard-data"></i> Key Performance Indicators
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="border rounded p-3 text-center">
                                <h3 class="text-primary mb-1">@Model.Kpis.ComplianceRate.ToString("F0")%</h3>
                                <small class="text-muted">Compliance Rate</small>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="border rounded p-3 text-center">
                                <h3 class="text-success mb-1">@Model.Kpis.RiskMitigationRate.ToString("F0")%</h3>
                                <small class="text-muted">Risk Mitigation</small>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="border rounded p-3 text-center">
                                <h3 class="text-info mb-1">@Model.Kpis.ControlEffectiveness.ToString("F0")%</h3>
                                <small class="text-muted">Control Effectiveness</small>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="border rounded p-3 text-center">
                                <h3 class="text-warning mb-1">@Model.Kpis.PolicyCompliance.ToString("F0")%</h3>
                                <small class="text-muted">Policy Compliance</small>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="border rounded p-3 text-center">
                                <h3 class="text-success mb-1">@Model.Kpis.AuditFindingsResolved.ToString("F0")%</h3>
                                <small class="text-muted">Findings Resolved</small>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="border rounded p-3 text-center">
                                <h3 class="text-primary mb-1">@Model.Kpis.TrainingCompletion.ToString("F0")%</h3>
                                <small class="text-muted">Training Completion</small>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="border rounded p-3 text-center">
                                <h3 class="text-info mb-1">@Model.Kpis.AssessmentCoverage.ToString("F0")%</h3>
                                <small class="text-muted">Assessment Coverage</small>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="border rounded p-3 text-center">
                                <h3 class="text-secondary mb-1">@Model.Kpis.VendorCompliance.ToString("F0")%</h3>
                                <small class="text-muted">Vendor Compliance</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Health & Improvements Row -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <i class="bi bi-heart-pulse"></i> Compliance Health
                </div>
                <div class="card-body">
                    @{
                        var healthColor = Model.Health.HealthStatus switch {
                            "Excellent" => "success",
                            "Good" => "primary",
                            "Fair" => "warning",
                            "Poor" => "danger",
                            _ => "secondary"
                        };
                    }
                    <div class="text-center mb-4">
                        <div class="display-4 text-@healthColor">@Model.Health.OverallHealth.ToString("F0")%</div>
                        <span class="badge bg-@healthColor fs-6">@Model.Health.HealthStatus</span>
                    </div>
                    <div class="row text-center">
                        <div class="col-4">
                            <h4>@Model.Health.ActiveFrameworks</h4>
                            <small class="text-muted">Active Frameworks</small>
                        </div>
                        <div class="col-4">
                            <h4 class="text-danger">@Model.Health.ComplianceGaps</h4>
                            <small class="text-muted">Compliance Gaps</small>
                        </div>
                        <div class="col-4">
                            <h4 class="text-warning">@Model.Health.OverdueItems</h4>
                            <small class="text-muted">Overdue Items</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <i class="bi bi-lightning"></i> Improvement Status
                </div>
                <div class="card-body">
                    <div class="row text-center mb-4">
                        <div class="col-4">
                            <h2 class="text-primary">@Model.ActiveImprovements</h2>
                            <small class="text-muted">Active</small>
                        </div>
                        <div class="col-4">
                            <h2 class="text-success">@Model.CompletedImprovements</h2>
                            <small class="text-muted">Completed</small>
                        </div>
                        <div class="col-4">
                            <h2 class="text-info">@Model.ImprovementVelocity.ToString("F1")</h2>
                            <small class="text-muted">Velocity</small>
                        </div>
                    </div>
                    @{
                        var trendIcon = Model.OverallTrend switch {
                            "Improving" => "bi-arrow-up-circle text-success",
                            "Stable" => "bi-dash-circle text-warning",
                            _ => "bi-arrow-down-circle text-danger"
                        };
                    }
                    <div class="text-center">
                        <i class="bi @trendIcon fs-1"></i>
                        <h5>Trend: @Model.OverallTrend</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Priorities & Achievements -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <i class="bi bi-exclamation-triangle"></i> Top Priorities
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.TopPriorities.Any())
                    {
                        @foreach (var priority in Model.TopPriorities)
                        {
                            <li class="list-group-item">
                                <i class="bi bi-arrow-right-circle text-warning"></i> @priority
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">No priorities identified</li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-trophy"></i> Recent Achievements
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.Achievements.Any())
                    {
                        @foreach (var achievement in Model.Achievements)
                        {
                            <li class="list-group-item">
                                <i class="bi bi-check-circle text-success"></i> @achievement
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">No recent achievements</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-purple {
        background-color: #6f42c1 !important;
    }
</style>
