@model dynamic
@{
    Layout = null;
    var name = Model?.Name ?? "there";
    var companyName = Model?.CompanyName ?? "Your Company";
    var upgradeLink = Model?.UpgradeLink ?? "#";
    var extendLink = Model?.ExtendLink ?? "#";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your trial has ended - don't lose your progress</title>
</head>
<body style="margin: 0; padding: 0; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background-color: #f8fafc;">
    <table role="presentation" style="width: 100%; border-collapse: collapse;">
        <tr>
            <td style="padding: 40px 20px;">
                <table role="presentation" style="max-width: 600px; margin: 0 auto; background-color: #ffffff; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                    <tr>
                        <td style="padding: 30px 40px 20px; text-align: center; border-bottom: 1px solid #e2e8f0;">
                            <h1 style="margin: 0; font-size: 22px; color: #0f172a;">
                                Shahin<span style="color: #dc2626;">AI</span> GRC
                            </h1>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 20px 40px; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                            <table role="presentation" style="width: 100%;">
                                <tr>
                                    <td style="text-align: center;">
                                        <p style="margin: 0; font-size: 24px; color: #ffffff; font-weight: 700;">Your Trial Has Ended</p>
                                        <p style="margin: 10px 0 0; font-size: 14px; color: #fef3c7;">Your data is safe for the next 30 days</p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 40px;">
                            <p style="margin: 0 0 20px; font-size: 16px; color: #334155;">Hello @name,</p>
                            <p style="margin: 0 0 20px; font-size: 16px; color: #334155; line-height: 1.6;">
                                Your 7-day trial of Shahin AI GRC has ended. But don't worry - your data and settings are preserved for 30 days.
                            </p>
                            <table role="presentation" style="width: 100%; margin: 20px 0; background-color: #f8fafc; border-radius: 8px;">
                                <tr>
                                    <td style="padding: 20px;">
                                        <p style="margin: 0 0 10px; font-size: 14px; color: #334155; font-weight: 600;">What happens next:</p>
                                        <table role="presentation" style="width: 100%;">
                                            <tr>
                                                <td style="padding: 5px 0; font-size: 14px; color: #64748b;">
                                                    - Your compliance data is preserved
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 5px 0; font-size: 14px; color: #64748b;">
                                                    - Evidence uploads are safe
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 5px 0; font-size: 14px; color: #64748b;">
                                                    - Team members retain access upon reactivation
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 5px 0; font-size: 14px; color: #64748b;">
                                                    - After 30 days, data may be archived
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            <table role="presentation" style="width: 100%;">
                                <tr>
                                    <td style="text-align: center; padding: 20px 0;">
                                        <a href="@upgradeLink" style="display: inline-block; padding: 14px 32px; background-color: #dc2626; color: #ffffff; text-decoration: none; font-size: 16px; font-weight: 600; border-radius: 8px;">
                                            Upgrade Now
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: center; padding: 0 0 20px;">
                                        <a href="@extendLink" style="display: inline-block; padding: 12px 28px; background-color: #ffffff; color: #334155; text-decoration: none; font-size: 14px; font-weight: 600; border-radius: 8px; border: 2px solid #e2e8f0;">
                                            Need More Time? Request Extension
                                        </a>
                                    </td>
                                </tr>
                            </table>
                            <p style="margin: 20px 0 0; font-size: 13px; color: #94a3b8; line-height: 1.6; text-align: center;">
                                Have questions about pricing or features? Our team is here to help.
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 20px 40px; background-color: #f8fafc; border-top: 1px solid #e2e8f0; border-radius: 0 0 12px 12px;">
                            <p style="margin: 0; font-size: 14px; color: #64748b; text-align: center;">
                                <strong style="color: #334155;">The Shahin AI Team</strong>
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
