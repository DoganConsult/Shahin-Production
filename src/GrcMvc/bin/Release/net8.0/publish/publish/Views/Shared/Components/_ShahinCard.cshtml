@*
    SHAHIN AI GRC - Card Component
    Usage: <partial name="Components/_ShahinCard" model='new { Title = "Card Title", Subtitle = "Subtitle", Body = Html.Raw("<p>Content</p>"), Footer = Html.Raw("Footer"), Variant = "elevated" }' />
*@
@{
    dynamic model = ViewData.Model ?? new { };
    var title = model?.Title ?? "";
    var subtitle = model?.Subtitle ?? "";
    var body = model?.Body;
    var footer = model?.Footer;
    var variant = model?.Variant ?? "default"; // default, elevated, flat, interactive
    var cssClass = model?.CssClass ?? "";

    var cardClass = "shahin-card";
    if (variant != "default") {
        cardClass += $" shahin-card-{variant}";
    }
    if (!string.IsNullOrEmpty(cssClass)) {
        cardClass += $" {cssClass}";
    }
}

<div class="@cardClass">
    @if (!string.IsNullOrEmpty(title)) {
        <div class="shahin-card-header">
            <h3 class="shahin-card-title">@title</h3>
            @if (!string.IsNullOrEmpty(subtitle)) {
                <p class="shahin-card-subtitle">@subtitle</p>
            }
        </div>
    }

    @if (body != null) {
        <div class="shahin-card-body">
            @body
        </div>
    }

    @if (footer != null) {
        <div class="shahin-card-footer">
            @footer
        </div>
    }
</div>
