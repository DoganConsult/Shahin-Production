@model GrcMvc.Models.ViewModels.SecuritySettingsViewModel
@{
    ViewData["Title"] = "Security Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Profile", "Account")">Account</a></li>
            <li class="breadcrumb-item active">Security</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4">Security Settings</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <!-- Two-Factor Authentication -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-shield-lock"></i> Two-Factor Authentication</h5>
                </div>
                <div class="card-body">
                    @if (Model.Is2faEnabled)
                    {
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-success me-2"><i class="bi bi-check-lg"></i> Enabled</span>
                            <span class="text-muted">Your account is protected with 2FA</span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>Recovery Codes</h6>
                                        <p class="text-muted small mb-2">@Model.RecoveryCodesLeft codes remaining</p>
                                        <form asp-action="GenerateRecoveryCodes" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-arrow-repeat"></i> Generate New Codes
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>Browser Memory</h6>
                                        @if (Model.IsMachineRemembered)
                                        {
                                            <p class="text-muted small mb-2">This browser is remembered</p>
                                            <form asp-action="ForgetBrowser" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-warning btn-sm">
                                                    <i class="bi bi-x-circle"></i> Forget Browser
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <p class="text-muted small mb-0">Browser not remembered</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr />
                        <a href="@Url.Action("Disable2fa")" class="btn btn-outline-danger">
                            <i class="bi bi-shield-x"></i> Disable 2FA
                        </a>
                    }
                    else
                    {
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-warning text-dark me-2"><i class="bi bi-exclamation-triangle"></i> Not Enabled</span>
                            <span class="text-muted">Add an extra layer of security to your account</span>
                        </div>

                        <p class="text-muted">
                            Two-factor authentication adds an extra layer of security by requiring a code from 
                            your authenticator app in addition to your password.
                        </p>

                        <a href="@Url.Action("EnableAuthenticator")" class="btn btn-primary">
                            <i class="bi bi-shield-plus"></i> Enable 2FA with Authenticator App
                        </a>
                    }
                </div>
            </div>

            <!-- Password -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-key"></i> Password</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="mb-1">Last changed: 
                                @if (Model.LastPasswordChange.HasValue)
                                {
                                    <span>@Model.LastPasswordChange.Value.ToString("MMMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </p>
                            <small class="text-muted">We recommend changing your password regularly</small>
                        </div>
                        <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>

            <!-- Recent Security Activity -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Security Activity</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentSecurityLogs.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Time</th>
                                        <th>Action</th>
                                        <th>IP Address</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in Model.RecentSecurityLogs)
                                    {
                                        <tr>
                                            <td>@log.Timestamp.ToString("MMM dd, HH:mm")</td>
                                            <td>@log.Action</td>
                                            <td><code>@log.IpAddress</code></td>
                                            <td>
                                                @if (log.IsSuccess)
                                                {
                                                    <span class="badge bg-success">Success</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Failed</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4 mb-0">No recent security activity</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h6><i class="bi bi-lightbulb"></i> Security Tips</h6>
                    <ul class="small mb-0">
                        <li>Enable two-factor authentication for maximum security</li>
                        <li>Use a unique, strong password</li>
                        <li>Don't share your recovery codes</li>
                        <li>Review your security activity regularly</li>
                        <li>Log out from shared devices</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
