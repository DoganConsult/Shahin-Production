@model Volo.Abp.Identity.IdentityUserCreateDto
@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roles = ViewBag.AvailableRoles as IReadOnlyList<Volo.Abp.Identity.IdentityRoleDto>;
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-1">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Users</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
    <h1 class="h3 mb-4">Create New User</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <h5 class="mb-3">Account Information</h5>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label">Username <span class="text-danger">*</span></label>
                                <input asp-for="UserName" class="form-control" required />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">First Name</label>
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Surname" class="form-label">Last Name</label>
                                <input asp-for="Surname" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password <span class="text-danger">*</span></label>
                            <input asp-for="Password" type="password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <h5 class="mb-3">Roles</h5>
                        <div class="mb-4">
                            @if (roles != null)
                            {
                                @foreach (var role in roles)
                                {
                                    <div class="form-check">
                                        <input type="checkbox" name="RoleNames" value="@role.Name" 
                                               class="form-check-input" id="role_@role.Id" />
                                        <label class="form-check-label" for="role_@role.Id">@role.Name</label>
                                    </div>
                                }
                            }
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" checked />
                                <label asp-for="IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-lg"></i> Create User
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
