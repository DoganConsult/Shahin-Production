@model GrcMvc.Controllers.RegistrationSuccessViewModel
@{
    ViewData["Title"] = "Registration Successful";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 text-center">
            <!-- Success Icon -->
            <div class="mb-4">
                <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                </div>
            </div>

            <!-- Success Message -->
            <h1 class="h2 mb-3">Registration Successful!</h1>
            <p class="lead text-muted mb-4">
                Welcome to Shahin GRC Platform
            </p>

            <!-- Details Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Your Organization Details</h5>
                    <table class="table table-borderless text-start">
                        <tr>
                            <th class="text-muted" style="width: 150px;">Organization</th>
                            <td class="fw-bold">@Model.OrganizationName</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Admin Email</th>
                            <td>@Model.AdminEmail</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Your URL</th>
                            <td>
                                <code>https://@(Model.TenantSlug).shahin-ai.com</code>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Next Steps -->
            <div class="card bg-light border-0 mb-4">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-envelope-check me-2"></i>Check Your Email</h5>
                    <p class="card-text">
                        We've sent an activation link to <strong>@Model.AdminEmail</strong>.
                        Click the link to set your password and activate your account.
                    </p>
                    <p class="text-muted small mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        The link will expire in 24 hours. Check spam folder if not received.
                    </p>
                </div>
            </div>

            <!-- Steps -->
            <div class="text-start mb-4">
                <h6 class="text-muted mb-3">What's Next?</h6>
                <div class="d-flex align-items-start mb-2">
                    <span class="badge bg-primary rounded-circle me-3">1</span>
                    <span>Check your email and click the activation link</span>
                </div>
                <div class="d-flex align-items-start mb-2">
                    <span class="badge bg-primary rounded-circle me-3">2</span>
                    <span>Set your password and log in</span>
                </div>
                <div class="d-flex align-items-start mb-2">
                    <span class="badge bg-primary rounded-circle me-3">3</span>
                    <span>Complete the onboarding wizard</span>
                </div>
                <div class="d-flex align-items-start">
                    <span class="badge bg-primary rounded-circle me-3">4</span>
                    <span>Start managing your GRC program!</span>
                </div>
            </div>

            <!-- CTA -->
            <div class="d-grid gap-2">
                <a href="mailto:@Model.AdminEmail" class="btn btn-outline-primary">
                    <i class="bi bi-envelope me-2"></i> Open Email App
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Go to Login
                </a>
            </div>

            <!-- Support -->
            <div class="mt-4">
                <p class="text-muted small">
                    Need help? Contact us at
                    <a href="mailto:support@shahin-ai.com">support@shahin-ai.com</a>
                </p>
            </div>
        </div>
    </div>
</div>
