@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> L
@model List<GrcMvc.Services.Interfaces.SustainabilityImprovementDto>
@{
    ViewData["Title"] = "Sustainability Initiatives";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-recycle"></i> Sustainability Initiatives</h2>
            <p class="text-muted">Continuous improvement and long-term compliance sustainability</p>
        </div>
        <div class="col text-end">
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Initiative
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Total Initiatives</h6>
                    <h2 class="mb-0">@Model.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="opacity-75">In Progress</h6>
                    <h2 class="mb-0">@Model.Count(i => i.Status == "InProgress")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="opacity-75">Completed</h6>
                    <h2 class="mb-0">@Model.Count(i => i.Status == "Completed")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6>Avg Progress</h6>
                    <h2 class="mb-0">@(Model.Any() ? Model.Average(i => i.PercentComplete).ToString("F0") : "0")%</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Code</th>
                                <th>Initiative</th>
                                <th>Category</th>
                                <th>Owner</th>
                                <th>Progress</th>
                                <th>Target Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var initiative in Model)
                            {
                                var statusClass = initiative.Status switch {
                                    "InProgress" => "bg-primary",
                                    "Completed" => "bg-success",
                                    "OnHold" => "bg-warning text-dark",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                                var priorityClass = initiative.Priority switch {
                                    "Critical" => "bg-danger",
                                    "High" => "bg-warning text-dark",
                                    "Medium" => "bg-info",
                                    _ => "bg-secondary"
                                };
                                <tr>
                                    <td><code>@initiative.InitiativeCode</code></td>
                                    <td>
                                        <strong>@initiative.Title</strong>
                                        @if (!string.IsNullOrEmpty(initiative.TitleAr))
                                        {
                                            <br /><small class="text-muted" dir="rtl">@initiative.TitleAr</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">@initiative.Category</span>
                                        <span class="badge @priorityClass">@initiative.Priority</span>
                                    </td>
                                    <td>@initiative.Owner</td>
                                    <td>
                                        <div class="progress" style="width: 120px; height: 20px;">
                                            <div class="progress-bar @(initiative.PercentComplete >= 100 ? "bg-success" : "")"
                                                 style="width: @initiative.PercentComplete%">@initiative.PercentComplete.ToString("F0")%</div>
                                        </div>
                                    </td>
                                    <td>@initiative.TargetDate?.ToString("MMM dd, yyyy")</td>
                                    <td><span class="badge @statusClass">@initiative.Status</span></td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@initiative.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@initiative.Id" class="btn btn-sm btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-recycle display-1 text-muted opacity-25"></i>
                    <p class="text-muted mt-3">No sustainability initiatives yet</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create First Initiative
                    </a>
                </div>
            }
        </div>
    </div>
</div>
