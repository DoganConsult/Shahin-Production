# Gradual Deployment Environment Configuration
# Copy to targets.env and update with actual values

# Database Configuration
DB_CONTAINER=shahin-postgres
DB_USER=shahin_admin
DB_NAME=shahin_grc

# Deployment Stage URLs
CANARY_BASE_URL=http://localhost:5000
PILOT_BASE_URL=http://localhost:5001
PARTIAL_BASE_URL=http://localhost:5002
FULL_BASE_URL=http://localhost:5003

# Production URLs (update for real deployment)
# CANARY_BASE_URL=https://canary.shahin-grc.com
# PILOT_BASE_URL=https://pilot.shahin-grc.com
# PARTIAL_BASE_URL=https://partial.shahin-grc.com
# FULL_BASE_URL=https://app.shahin-grc.com

# Container Registry
REGISTRY_URL=registry.shahin-grc.com
REGISTRY_NAMESPACE=grc

# Kubernetes/Docker Settings
CANARY_REPLICAS=1
PILOT_REPLICAS=2
PARTIAL_REPLICAS=3
FULL_REPLICAS=5

# Traffic Distribution (percentages)
CANARY_TRAFFIC=5
PILOT_TRAFFIC=25
PARTIAL_TRAFFIC=50
FULL_TRAFFIC=100

# User Limits per Stage
CANARY_MAX_USERS=50
PILOT_MAX_USERS=250
PARTIAL_MAX_USERS=500
FULL_MAX_USERS=0  # 0 = unlimited

# Monitoring Settings
HEALTH_CHECK_INTERVAL=60
ALERT_EMAIL=ops@shahin-grc.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Feature Flag Service (if using external service)
FEATURE_FLAG_SERVICE_URL=http://localhost:8080
FEATURE_FLAG_API_KEY=your-api-key-here
